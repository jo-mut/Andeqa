<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andeqa.andeqa">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Andeqa"
        android:largeHeap="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".registration.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registration.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".creation.CreatePostActivity"
            android:screenOrientation="portrait">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.SEND" /> -->


            <!-- <category android:name="android.intent.category.DEFAULT" /> -->


            <!-- <data android:mimeType="image/*" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".profile.UpdateProfileActivity"
            android:label="Account settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".comments.CommentsActivity"
            android:label="Comments"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".likes.LikesActivity"
            android:label="Andeqans who liked"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <service android:name=".services.FirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".services.FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".profile.ProfileActivity"
            android:label="Profile"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".registration.ResetPasswordActivity"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".services.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".home.NavigationDrawerActivity"
            android:label="Andeqa"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".home.ImageViewActivity"
            android:label="Post"
            android:screenOrientation="portrait" />
        <activity
            android:name=".wallet.WalletActivity"
            android:label="Wallet"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".market.ListOnMarketActivity"
            android:label="Set sale price"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".registration.CreateProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".home.PostDetailActivity"
            android:label="Post"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".home.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".message.MessagesAccountActivity"
            android:label="Chat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="Settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".registration.SignInWithGoogle"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registration.SaveGoogleProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".creation.CreateCollectionActivity"
            android:label="Create collection"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".collections.CollectionPostsActivity"
            android:label="Posts"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings.CollectionSettingsActivity"
            android:label="Collection settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".market.RedeemCreditsActivity"
            android:label="Redeem"
            android:screenOrientation="portrait" />
        <activity
            android:name=".message.MessagingActivity"
            android:label="Chats"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:label="Collection"
            android:screenOrientation="portrait"
            android:name=".profile.ProfileCollectionsActivity" />
        <activity
            android:label="Posts"
            android:screenOrientation="portrait"
            android:name=".profile.ProfileCollectionPostsActivity"/>
    </application>

</manifest>