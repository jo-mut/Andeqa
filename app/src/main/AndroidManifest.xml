<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cinggl.cinggl">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Cinggl"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".profile.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".profile.SignUpActivity" />
        <activity android:name=".camera.CreateCingleActivity" />
        <activity android:name=".home.HomeActivity" />
        <activity
            android:name=".ui.SettingsActivity"
            android:label="Settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".profile.UpdateProfileActivity"
            android:label="Update your profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".home.CommentsActivity"
            android:label="Comments"
            android:theme="@style/AppTheme" />
        <activity android:name=".profile.CingleDetailActivity" />
        <activity
            android:name=".home.LikesActivity"
            android:label="Cingulans who liked"
            android:theme="@style/AppTheme" />
        <activity android:name=".camera.CingleCreationActivity" />
        <activity android:name=".profile.PeopleActivity">

        </activity>
    </application>

</manifest>