<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andeka.andeka">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <application
        android:name="com.andeka.andeka.App"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Andeqa"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.andeka.andeka.registration.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.registration.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.profile.UpdateProfileActivity"
            android:label="Account settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <service android:name="com.andeka.andeka.services.FirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.andeka.andeka.services.FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.andeka.andeka.profile.ProfileActivity"
            android:label="Profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.andeka.andeka.registration.ResetPasswordActivity"
            android:screenOrientation="portrait" />

        <receiver
            android:name="com.andeka.andeka.services.ConnectivityReceiver"
            android:enabled="true"
            android:permission="android.permission.INSTALL_PACKAGES">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.andeka.andeka.main.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.andeka.andeka.post_detail.ImageViewActivity"
            android:label="Photo"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.registration.CreateProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.post_detail.PostDetailActivity"
            android:label="Post"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:host="andeqa.page.link" />
                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:pathPattern=".*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andeka.andeka.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andeka.andeka.chatting.ChatActivity"
            android:label="Chats"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.andeka.andeka.settings.SettingsActivity"
            android:label="Settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.andeka.andeka.collections.CollectionPostsActivity"
            android:label="Posts"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.settings.CollectionSettingsActivity"
            android:label="Collection settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.andeka.andeka.camera.CameraActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.creation.CreatePostActivity"
            android:label="Share"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.camera.CameraPermissionsActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.andeka.andeka"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <activity
            android:name="com.andeka.andeka.chatting.PhotoMessageActivity"
            android:label="Photo"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.profile.ProfileCollectionsActivity"
            android:label="Collections"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.profile.ProfilePostsActivity"
            android:label="Posts"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.gallery.AlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.people.FollowersActivity"
            android:label="Followers"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.people.FollowingActivity"
            android:label="Following"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.creation.PreviewVideoPostActivity"
            android:label="Video"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.creation.PreviewImagePostActivity"
            android:label="Andeka"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:label="Post"
            android:name="com.andeka.andeka.post_detail.VideoDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.search.SearchPeopleActivity"
            android:label="Search people"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.search.SearchedCollectionsActivity"
            android:label="Search collections"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.collections.ChooseCollectionActivity"
            android:label="Add to collection"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.search.SearchPostsActivity"
            android:label="Search posts"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.andeka.andeka.comments.CommentsActivity"
            android:label="Comments"
            android:screenOrientation="portrait" />
        <activity
            android:label="Collections"
            android:name="com.andeka.andeka.collections.CollectionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:screenOrientation="portrait"
            android:label="Create channel"
            android:name="com.andeka.andeka.creation.CreateChannelActivity"/>
    </application>

</manifest>