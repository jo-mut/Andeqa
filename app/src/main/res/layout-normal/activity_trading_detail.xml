<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_baking_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.cinggl.cinggl.ifair.TradeDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            app:titleTextAppearance="@style/toolbarTextSize"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@android:color/white">

        </android.support.v7.widget.Toolbar>

    </RelativeLayout>


    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <RelativeLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Cingle Creator:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cingleCreatorTextView"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        app:srcCompat="@drawable/profle_image_background"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/profileImageView" />

                    <TextView
                        android:text="username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/usernameTextView"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/cingleCreatorTextView"
                        android:layout_toEndOf="@+id/cingleCreatorTextView"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:text="Cingle Date:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cingleDateTextView"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:text="10th Sep, 2016"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/datePostedTextView"
                        android:layout_alignBaseline="@+id/cingleDateTextView"
                        android:layout_alignBottom="@+id/cingleDateTextView"
                        android:layout_toRightOf="@+id/cingleDateTextView"
                        android:layout_toEndOf="@+id/cingleDateTextView"
                        android:textSize="12sp"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Cingle Owner:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cingleOwnerTitleTextView"
                        android:textStyle="normal|bold"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cingleOwnerTitleTextView"
                        android:layout_toEndOf="@+id/cingleOwnerTitleTextView"
                        android:id="@+id/cingleOwnerTextView"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:text="Cingle Sense Credits:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cingleSenseCreditsTitleTextView"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:text="CSCs 0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cingleSenseCreditsTextView"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/cingleSenseCreditsTitleTextView"
                        android:layout_toEndOf="@+id/cingleSenseCreditsTitleTextView"
                        android:textSize="12sp"
                        android:layout_centerVertical="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/cingleTitleRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cingleTitleTextView"
                        android:textColor="@android:color/black"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.cinggl.cinggl.ProportionalImageView
                            app:srcCompat="@drawable/test"
                            android:id="@+id/cingleImageView"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="400dp" />

                    </RelativeLayout>



                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/cingleDescriptionRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="The thing about nature is that it is irreplacable.It was what it is.It cannot be recreated once extinct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/cingleDescriptionTextView"
                        android:textColor="@android:color/black"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp" />


                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:id="@+id/cingleToolsRelativeLayout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_favorite_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/likesImageView"
                        tools:scaleType="centerCrop"
                        android:scaleType="centerCrop"
                        android:padding="5dp" />

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/commentsCountTextView"
                        android:layout_toEndOf="@+id/commentsImageView"
                        android:layout_toRightOf="@+id/commentsImageView"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="false"
                        android:layout_centerVertical="false"
                        android:layout_marginTop="10dp" />


                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cingleTradeMethodTextView"
                        android:textStyle="normal|bold"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/commentsCountTextView"
                        android:layout_toEndOf="@+id/commentsCountTextView"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:id="@+id/tradeCingleButton"
                        android:textAllCaps="false"
                        android:background="@drawable/colour_btn_background"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_alignParentRight="false"
                        android:layout_toRightOf="@+id/commentsCountTextView"
                        android:layout_toEndOf="@+id/commentsCountTextView"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:minHeight="26dp"
                        android:minWidth="50dip" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/commentsImageView"
                        tools:scaleType="centerCrop"
                        android:scaleType="centerCrop"
                        android:padding="5dp"
                        android:layout_marginStart="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/likesImageView"
                        android:layout_toEndOf="@+id/likesImageView" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/likesRecyclerView"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/likesCountTextView"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:background="@drawable/text_border_default"
                        android:scaleType="centerCrop"
                        android:cropToPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/likesRecyclerView"
                        android:layout_toEndOf="@+id/likesRecyclerView"
                        android:layout_marginLeft="5dp"
                        android:textSize="9sp"
                        android:text="+0"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/cingleOwnersRecyclerView"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
