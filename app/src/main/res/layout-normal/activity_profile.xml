<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.profile.ProfileActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/default_gradient_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:id="@+id/header_cover_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profileCoverImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:alpha="0.1"
                    android:scaleType="centerCrop"
                    android:src="@color/transparentColor" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_height="120dp"
                    android:background="@drawable/profile_circular_border_imageview"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_width="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp" />

                <RelativeLayout
                    android:id="@+id/fullNameRelativeLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="220dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fullNameTextView"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="1dp"
                        android:layout_centerInParent="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/countsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="300dp">


                    <RelativeLayout
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_toStartOf="@+id/followersCountRelativeLayout"
                        android:layout_toLeftOf="@+id/followersCountRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/postsCountTextView"
                            android:textSize="10sp"
                            android:background="@drawable/border_white"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:text="Posts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/postsTextView"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentRight="false"
                            android:layout_alignParentEnd="false"
                            android:layout_below="@+id/postsCountTextView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/followersCountRelativeLayout"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followersCountTextView"
                            android:textSize="10sp"
                            android:background="@drawable/border_white"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textAlignment="center"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:text="Followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followersTextView"
                            android:layout_below="@+id/followersCountTextView"
                            android:layout_alignParentBottom="false"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@android:color/white"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_toEndOf="@+id/followersCountRelativeLayout"
                        android:layout_toRightOf="@+id/followersCountRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followingCountTextView"
                            android:textSize="10sp"
                            android:background="@drawable/border_white"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textAlignment="center"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:text="Following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followingTextView"
                            android:layout_below="@+id/followingCountTextView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@android:color/white"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>

                    <Button
                        android:visibility="gone"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:id="@+id/followButton"
                        android:layout_below="@+id/followingCountRelativeLayout"
                        android:minHeight="30dp"
                        android:minWidth="120dp"
                        android:textSize="14sp"
                        android:background="@drawable/colour_btn_background"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_below="@+id/countsLayout"
                    android:id="@+id/bioRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    tools:ignore="UnusedAttribute">

                    <TextView
                        android:id="@+id/bioTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:padding="10dp"
                        android:textAlignment="center" />

                </RelativeLayout>

                <ImageView
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/profileImageView"
                    android:layout_toEndOf="@+id/profileImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
                    android:id="@+id/sendMessageImageView" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                android:title="Collapsing Toolbar"
                app:layout_collapseMode="pin"
                tools:ignore="HardcodedText,UnusedAttribute" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:numColumns="auto_fit"
            android:id="@+id/collectionsRecyclerView"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

