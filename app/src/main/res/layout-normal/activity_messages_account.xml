<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent_background"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.message.MessagesAccountActivity">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/toolbarTextAppearance"
        app:titleMarginStart="-50sp"
        app:contentInsetStart="0dp">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/massagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardMaxElevation="1dp"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:padding="3dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:background="@drawable/white_rounded_background"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/senderImageView"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:background="@drawable/message_edittext_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_alignParentBottom="false"
                android:id="@+id/sendMessageEditText"
                android:hint="Write a message"
                android:padding="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/senderImageView"
                android:layout_toEndOf="@+id/senderImageView"
                android:layout_toLeftOf="@+id/sendMessageImageView"
                android:layout_toStartOf="@+id/sendMessageImageView"
                android:layout_centerInParent="true" />

            <ImageView
                android:background="@drawable/white_rounded_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_menu_send"
                android:layout_alignParentBottom="false"
                android:id="@+id/sendMessageImageView"
                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="9dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
