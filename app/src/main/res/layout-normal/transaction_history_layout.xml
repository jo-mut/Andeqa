<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.cinggl.cinggl.ProportionalImageView
            android:id="@+id/cingleImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cingleImageView"
            android:layout_toEndOf="@+id/cingleImageView"
            android:layout_alignBottom="@+id/creatorImageView"
            android:layout_centerVertical="false"
            android:layout_toLeftOf="@+id/followButton"
            android:layout_toStartOf="@+id/followButton"
            android:paddingTop="10dp">

            <TextView
                android:text="Amount transferred: CSC 0.000345"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:id="@+id/amountTransferredTextView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="Date of transaction:"
                android:textSize="14sp"
                android:layout_below="@+id/amountTransferredTextView"
                android:id="@+id/transactionDateTextView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:text="Wallet balance:"
                android:textSize="14sp"
                android:layout_below="@+id/transactionDateTextView"
                android:id="@+id/newWalletBalanceTextView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_delete_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/newWalletBalanceTextView"
                android:padding="5dp"
                android:id="@+id/deleteHistoryImageView" />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>