<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.home.DeepLinkActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                app:titleTextAppearance="@style/toolbarTextAppearance"
                android:layout_height="56dp"
                android:background="@drawable/default_gradient_color"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@android:color/white">

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="1dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_margin="5dp"
                            android:id="@+id/profileImageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_toLeftOf="@+id/settingsRelativeLayout"
                            android:layout_toStartOf="@+id/settingsRelativeLayout"
                            android:layout_toRightOf="@+id/profileImageView"
                            android:layout_toEndOf="@+id/profileImageView"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/nameRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/usernameTextView"
                                android:textSize="14sp"
                                android:textColor="@color/grey_700"
                                android:textStyle="normal|bold"
                                android:text="" />

                        </LinearLayout>

                        <RelativeLayout
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/settingsRelativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/shareImageView"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:tint="@color/grey_700"
                                app:srcCompat="@drawable/ic_settings_vert" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="0.3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.andeqa.andeqa.utils.ProportionalImageView
                    android:id="@+id/postImageView"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="false"
                    android:layout_height="400dp" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="2dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:background="@drawable/border_rectangle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/toolsRelativeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/viewsLinearLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/viewsImageView"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:tint="@color/grey_700"
                                        app:srcCompat="@drawable/ic_views" />


                                    <TextView
                                        android:id="@+id/viewsCountTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:padding="10dp"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/commentsLinearLayout"
                                    android:orientation="horizontal"
                                    android:layout_margin="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/commentsImageView"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginStart="5dp"
                                        android:tint="@color/grey_700"
                                        app:srcCompat="@drawable/ic_comment" />

                                    <TextView
                                        android:id="@+id/commentsCountTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="12sp"
                                        android:padding="10dp"
                                        android:layout_gravity="bottom"
                                        android:textStyle="normal" />

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            android:id="@+id/userLikesRelativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="bottom"
                                android:id="@+id/userCountTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@color/grey_700"
                                android:textStyle="normal|bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/titleRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/titleTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/grey_700"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/descriptionRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/descriptionTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/grey_700"
                                android:textSize="14sp" />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
