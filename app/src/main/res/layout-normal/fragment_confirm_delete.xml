<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.andeka.andeka.settings.ConfirmDeleteFragment"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:id="@+id/confirmTextView"
                    android:textSize="16dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_margin="1dp"
                    android:layout_toStartOf="@+id/dividerView"
                    android:layout_toLeftOf="@+id/dividerView"
                    android:background="@drawable/border_rectangle"
                    android:id="@+id/YesRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:text="Yes"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:textSize="18sp" />


                </RelativeLayout>

                <View
                    android:id="@+id/dividerView"
                    android:layout_width="0.1dp"
                    android:layout_height="0.1dp"
                    android:layout_centerInParent="true" />

                <RelativeLayout
                    android:layout_margin="1dp"
                    android:layout_toRightOf="@+id/dividerView"
                    android:layout_toEndOf="@+id/dividerView"
                    android:background="@drawable/border_rectangle"
                    android:id="@+id/noRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:text="No"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


