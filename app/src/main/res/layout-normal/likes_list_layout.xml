<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/creatorImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/profle_image_background"
            android:layout_margin="10dp" />

        <Button
            android:text="Follow"
            android:id="@+id/followTextView"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/colour_btn_background"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/creatorImageView"
            android:layout_toEndOf="@+id/creatorImageView"
            android:layout_toLeftOf="@+id/followTextView"
            android:layout_toStartOf="@+id/followTextView"
            android:layout_alignBottom="@+id/creatorImageView"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true">

            <TextView
                android:text="username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usernameTextView"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:layout_alignParentTop="false" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fullNameTextView"
                android:textSize="14sp"
                android:layout_below="@+id/usernameTextView"
                android:layout_centerVertical="true" />


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>