<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in_with_google"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_gradient_color"
    tools:context="com.andeqa.andeqa.registration.SignInWithGoogle">

    <TextView
        android:background="@drawable/logo_background"
        android:layout_centerInParent="true"
        android:textSize="40sp"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/white"
        android:id="@+id/appLogoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Andeqa"/>

    <TextView
        android:padding="5dp"
        android:textSize="14sp"
        android:text="Signing in..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appLogoTextView"
        android:layout_centerHorizontal="true"
        android:id="@+id/signingInTextView"
        android:textColor="@color/greyColor" />

    <ProgressBar
        android:layout_below="@+id/signingInTextView"
        android:indeterminateOnly="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="100dp" />

</RelativeLayout>


