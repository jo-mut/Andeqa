<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.andeqa.andeqa.profile.ProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/default_gradient_color"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMargin="16dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:paddingBottom="120dp"
                android:id="@+id/header_cover_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profileCoverImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:alpha="0.1"
                    android:scaleType="centerCrop"
                    android:src="@color/transparentColor" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/profile_circular_border_imageview"
                    android:padding="10dp"
                    android:scaleType="centerCrop" />


                <RelativeLayout
                    android:id="@+id/nameRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileImageView"
                    android:layout_marginTop="60dp">

                    <TextView
                        android:id="@+id/fullNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        android:text=""
                        android:textStyle="normal|bold" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/bioRelativeLayout"
                    android:layout_below="@+id/nameRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bioTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="5dp"
                        android:paddingEnd="80dp"
                        android:paddingLeft="80dp"
                        android:paddingRight="80dp"
                        android:paddingStart="80dp"
                        android:paddingTop="5dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="28sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/countsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bioRelativeLayout"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_toLeftOf="@+id/collectionsRelativeLayout"
                        android:layout_toStartOf="@+id/collectionsRelativeLayout"
                        android:id="@+id/singlesRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp">

                        <TextView
                            android:id="@+id/singlesCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:padding="10dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/singlesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="singles"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/singlesCountTextView"
                            android:textSize="24sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:id="@+id/collectionsRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="10dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/collectionsCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/collectionsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="collections"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/collectionsCountTextView"
                            android:textSize="24sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/collectionsRelativeLayout"
                        android:layout_toEndOf="@+id/collectionsRelativeLayout"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:id="@+id/postRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:padding="10dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/postsCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/postsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/postsCountTextView"
                            android:text="posts"
                            android:layout_centerHorizontal="true"
                            android:textSize="24sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sendMessageRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countsLayout"
                    android:layout_marginTop="50dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/sendMessageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/colour_btn_background"
                        android:minHeight="60dp"
                        android:paddingEnd="30dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingStart="30dp"
                        android:text="Send Message"
                        android:textSize="28sp" />

                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                app:layout_collapseMode="pin"
                android:background="@color/transparentColor"
                app:titleTextColor="@android:color/white"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

   <android.support.v4.widget.NestedScrollView
       android:fillViewport="true"
       app:layout_behavior="@string/appbar_scrolling_view_behavior"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <android.support.design.widget.TabLayout
               android:layout_gravity="bottom"
               android:id="@+id/tabs"
               android:layout_width="match_parent"
               android:layout_height="112dp"
               app:tabMode="fixed"
               app:layout_scrollFlags="scroll|enterAlways"
               app:tabGravity="fill"
               android:background="@android:color/white"
               app:tabTextAppearance="@style/tablayoutTextAppearance"
               app:tabIndicatorColor="@android:color/white"
               app:tabSelectedTextColor="@color/colorAccent"
               app:tabTextColor="@android:color/black" />

           <android.support.v4.view.ViewPager
               android:layout_marginBottom="0.2dp"
               android:id="@+id/container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </LinearLayout>

   </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
