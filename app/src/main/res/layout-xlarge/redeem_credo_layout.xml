<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/postImageView"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:srcCompat="@drawable/transparent_background" />

       </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <LinearLayout
               android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:textSize="28sp"
                  android:text=""
                  android:textStyle="bold"
                  android:id="@+id/creditsTextView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

              <RelativeLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <EditText
                      android:layout_centerVertical="true"
                      android:background="@drawable/input_background"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:inputType="numberDecimal|number"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:id="@+id/redeemCreditEditText"
                      android:hint="Enter amount"
                      android:textSize="28sp"
                      android:layout_toLeftOf="@+id/redeemButton"
                      android:layout_toStartOf="@+id/redeemButton"
                      android:layout_marginRight="10dp"
                      android:layout_marginEnd="10dp"
                      android:paddingStart="10dp"
                      android:paddingRight="10dp"
                      android:paddingEnd="10dp"
                      android:paddingLeft="10dp"
                      android:paddingTop="10dp"
                      android:paddingBottom="10dp" />

                  <Button
                      android:textSize="28sp"
                      android:minWidth="180dp"
                      android:minHeight="35dp"
                      android:paddingTop="10dp"
                      android:paddingBottom="10dp"
                      android:layout_centerVertical="true"
                      android:id="@+id/redeemButton"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"
                      android:layout_gravity="end"
                      android:background="@drawable/colour_btn_background"
                      android:textColor="@android:color/white"
                      android:text="Redeem"
                      android:textAllCaps="false"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

              </RelativeLayout>


          </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>