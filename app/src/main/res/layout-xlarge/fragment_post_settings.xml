<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- NOTE: This list should be displayed in a list
    instead of nested layouts -->

    <LinearLayout
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/bottom_fragment_background"
            android:layout_width="match_parent"
            android:layout_height="112dp">

            <TextView
                android:layout_margin="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleTextView"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:text="Post settings" />

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/deleteLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:tint="@color/grey_700"
                android:layout_gravity="center_vertical"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_delete" />

            <TextView
                android:textColor="@color/grey_700"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Delete"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/redeemLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:tint="@color/grey_700"
                android:layout_gravity="center_vertical"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_redeem" />

            <TextView
                android:textColor="@color/grey_700"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Redeem"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/reportLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:tint="@color/grey_700"
                android:layout_gravity="center_vertical"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:textColor="@color/grey_700"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Report"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/shareViaLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:tint="@color/grey_700"
                android:layout_gravity="center_vertical"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_share" />

            <TextView
                android:textColor="@color/grey_700"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Share via..."
                android:textSize="24sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>