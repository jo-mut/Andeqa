<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/collectionLinearLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/top_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_margin="0.1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="300dp"
                app:srcCompat="@drawable/transparent_background"
                android:id="@+id/collectionCoverImageView"
                android:scaleType="centerCrop"
                android:layout_height="150dp" />

        </RelativeLayout>

        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/post_bottom_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/collectionNameTextView"
                android:textSize="24sp"
                android:text=""
                android:textColor="@color/grey_700" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postsCountTextView"
                android:textSize="20sp"
                android:textColor="@color/grey_700"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>