<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.home.PostDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:fillViewport="true"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="0.3dp"
                    android:id="@+id/header_cover_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.andeqa.andeqa.utils.ProportionalImageView
                        android:id="@+id/postImageView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/transparent_background"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:padding="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardPreventCornerOverlap="false"
                        app:cardCornerRadius="0dp">

                        <LinearLayout
                            android:background="@drawable/border_rectangle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/toolsRelativeLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:id="@id/likesRelativeLayout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/likesImageView"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginStart="5dp"
                                            android:padding="5dp"
                                            app:srcCompat="@drawable/ic_thumb_up" />


                                        <TextView
                                            android:id="@+id/likesCountTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/likesImageView"
                                            android:layout_centerHorizontal="true"
                                            android:paddingBottom="2dp"
                                            android:paddingTop="2dp"
                                            android:text="0"
                                            android:textSize="24sp"
                                            android:textStyle="normal|bold" />


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/dislikeRelativeLayout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@+id/likesRelativeLayout"
                                        android:layout_toRightOf="@+id/likesRelativeLayout">


                                        <ImageView
                                            android:id="@+id/dislikesImageView"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:padding="5dp"
                                            app:srcCompat="@drawable/ic_thumb_down" />


                                        <TextView
                                            android:id="@+id/dislikesCountTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/dislikesImageView"
                                            android:layout_centerHorizontal="true"
                                            android:paddingBottom="2dp"
                                            android:paddingTop="2dp"
                                            android:text="0"
                                            android:textSize="24sp"
                                            android:textStyle="normal|bold" />


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@+id/dislikeRelativeLayout"
                                        android:layout_toRightOf="@+id/dislikeRelativeLayout">

                                        <ImageView
                                            android:id="@+id/commentsImageView"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginStart="5dp"
                                            android:padding="5dp"
                                            android:tint="@android:color/black"
                                            app:srcCompat="@drawable/ic_chat" />

                                        <TextView
                                            android:id="@+id/commentsCountTextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/commentsImageView"
                                            android:layout_centerHorizontal="true"
                                            android:paddingBottom="2dp"
                                            android:paddingTop="2dp"
                                            android:text="0"
                                            android:textSize="24sp"
                                            android:textStyle="normal|bold" />


                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:visibility="gone"
                                android:id="@+id/titleRelativeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/titleTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="32sp"
                                    android:textStyle="normal" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:visibility="gone"
                                android:id="@+id/descriptionRelativeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/descriptionTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="28sp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/salePriceRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="false"
                        android:id="@+id/postPriceTextView"
                        android:layout_centerInParent="true"
                        android:textSize="32sp"
                        android:textColor="@android:color/black"
                        android:textStyle="normal|bold" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_create_white_24dp"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="true"
                        android:id="@+id/editSalePriceImageView"
                        android:tint="@color/colorPrimary"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_done_white_24dp"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="true"
                        android:id="@+id/doneEditingImageView"
                        android:tint="@color/colorPrimary"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />

                    <ProgressBar
                        android:id="@+id/salePriceProgressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:layout_toLeftOf="@+id/doneEditingImageView"
                        android:layout_toStartOf="@+id/doneEditingImageView"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="28sp"
                        android:visibility="invisible"
                        android:id="@+id/editSalePriceEditText" />


                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:padding="10dp"
                    android:id="@+id/priceRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="Buy"
                        android:layout_width="match_parent"
                        android:id="@+id/tradeButton"
                        android:textAllCaps="true"
                        android:textSize="32sp"
                        android:background="@drawable/colour_btn_background"
                        android:layout_height="112dp"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp" />


                </RelativeLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="3dp"
                            android:paddingLeft="3dp"
                            tools:ignore="RtlSymmetry">

                            <TextView
                                android:text="Creator:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/postCreatorTextView"
                                android:textSize="28sp"
                                android:textStyle="normal|bold"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/profileImageView" />

                            <TextView
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:id="@+id/usernameTextView"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/postCreatorTextView"
                                android:layout_toEndOf="@+id/postCreatorTextView"
                                android:layout_toLeftOf="@+id/profileImageView"
                                android:layout_toStartOf="@+id/profileImageView"
                                android:textSize="28sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp">

                            <TextView
                                android:text="Date Posted:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/dateTextView"
                                android:textSize="28sp"
                                android:textStyle="normal|bold"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:id="@+id/datePostedTextView"
                                android:layout_alignBaseline="@+id/dateTextView"
                                android:layout_alignBottom="@+id/dateTextView"
                                android:layout_toRightOf="@+id/dateTextView"
                                android:layout_toEndOf="@+id/dateTextView"
                                android:textSize="28sp"
                                android:layout_centerVertical="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/postSenseCreditRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp">

                            <TextView
                                android:text="uCredit:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/senseCreditsTitleTextView"
                                android:textSize="28sp"
                                android:textStyle="normal|bold"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/senseCreditsTitleTextView"
                                android:layout_toRightOf="@+id/senseCreditsTitleTextView"
                                android:id="@+id/creditsTextView"
                                android:textSize="28sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_centerVertical="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Owner:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ownerTitleTextView"
                                android:textStyle="normal|bold"
                                android:textSize="28sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="3dp"
                                android:layout_marginLeft="3dp"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/ownerTitleTextView"
                                android:layout_toEndOf="@+id/ownerTitleTextView"
                                android:layout_toLeftOf="@+id/ownerImageView"
                                android:layout_toStartOf="@+id/ownerImageView"
                                android:id="@+id/postOwnerTextView"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:textSize="28sp"
                                android:layout_centerVertical="true" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/ownerImageView" />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
