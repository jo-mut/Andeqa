<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_collection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.creation.CreateCollectionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:layout_scrollFlags="scroll|enterAlways"
        app:titleTextAppearance="@style/toolbarTextAppearance"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <TextView
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doneTextView"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            android:layout_gravity="right"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textSize="36sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/collectionNameRelativeLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine|textCapWords"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/collectionNameEditText"
            android:textSize="36sp"
            android:padding="20dp"
            android:hint="Enter your collection's name"
            android:textStyle="normal|bold"
            android:background="@drawable/input_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameCountTextView"
            android:textSize="24sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/collectionNoteRelativeLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/collectionNoteEditText"
            android:hint="add a description note for your collection (optional)"
            android:padding="20dp"
            android:background="@drawable/input_background"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noteCountTextView"
            android:textSize="24sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <RelativeLayout
        android:id="@+id/collectionRelativeLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            app:srcCompat="@drawable/ic_app"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/collectionCoverImageView"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addRelativeLayout">

        <ImageView
            android:tint="@android:color/darker_gray"
            android:layout_width="400dp"
            android:layout_height="400dp"
            app:srcCompat="@drawable/ic_app"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/addCoverImageView"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addCollectionTextView"
            android:textSize="28sp"
            android:layout_below="@+id/addCoverImageView"
            android:text="Tap to add your collection cover"
            android:layout_centerHorizontal="true"
            android:padding="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp" />


    </RelativeLayout>

</LinearLayout>
