<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/creatorImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/profle_image_background"
            android:layout_margin="10dp"
            android:layout_width="110dp"
            android:layout_height="110dp" />

        <Button
            android:id="@+id/followButton"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/colour_btn_background"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/creatorImageView"
            android:layout_toEndOf="@+id/creatorImageView"
            android:layout_toStartOf="@+id/followButton"
            android:layout_toLeftOf="@+id/followButton"
            android:layout_alignBottom="@+id/creatorImageView"
            android:layout_centerVertical="true">

            <TextView
                android:text="username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usernameTextView"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textSize="32sp"
                android:layout_alignParentTop="false" />

            <TextView
                android:text="First"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firstNameTextView"
                android:textSize="28sp"
                android:layout_below="@+id/usernameTextView"
                android:layout_centerVertical="true" />

            <TextView
                android:text="Second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/secondNameTextView"
                android:layout_below="@+id/usernameTextView"
                android:layout_alignBaseline="@+id/firstNameTextView"
                android:layout_alignBottom="@+id/firstNameTextView"
                android:layout_toRightOf="@+id/firstNameTextView"
                android:layout_centerVertical="true"
                android:textSize="28sp" />


        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>