<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/collectionLinearLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="20dp"
            android:background="@drawable/post_top_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.andeqa.andeqa.utils.ProportionalImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/transparent_background"
                android:id="@+id/collectionCoverImageView"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="400dp" />

        </RelativeLayout>

        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/post_bottom_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/collectionNameTextView"
                android:padding="5dp"
                android:textSize="24sp"
                android:text=""
                android:textColor="@android:color/black" />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/collectionsNoteTextView"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postsCountTextView"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>