<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.cinggl.cinggl.profile.PersonalProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/default_gradient_color"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:id="@+id/header_cover_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/profileCoverImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.1"
                    android:src="@color/transparentColor"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/creatorImageView"
                    android:background="@drawable/profile_circular_border_imageview"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_width="200dp"
                    android:layout_height="240dp" />

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="440dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fullNameTextView"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/countsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="560dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postsCountTextView"
                        android:textSize="28sp"
                        android:background="@drawable/border_white"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="false"
                        android:layout_toLeftOf="@+id/followersCountTextView"
                        android:layout_toStartOf="@+id/followersCountTextView"
                        android:layout_marginRight="110dp"
                        android:layout_centerInParent="false"
                        android:layout_alignParentTop="true"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postsTextView"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="false"
                        android:layout_toLeftOf="@+id/followersCountTextView"
                        android:layout_toStartOf="@+id/followersCountTextView"
                        android:layout_below="@+id/postsCountTextView"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_centerHorizontal="false"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="28sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followersCountTextView"
                        android:textSize="28sp"
                        android:background="@drawable/border_white"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="center"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followersTextView"
                        android:layout_below="@+id/followersCountTextView"
                        android:layout_alignParentBottom="false"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followingCountTextView"
                        android:textSize="28sp"
                        android:background="@drawable/border_white"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_toRightOf="@+id/followersCountTextView"
                        android:layout_toEndOf="@+id/followersCountTextView"
                        android:textAlignment="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_marginLeft="110dp"
                        android:layout_centerInParent="false"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followingTextView"
                        android:layout_below="@+id/followingCountTextView"
                        android:layout_toRightOf="@+id/followersCountTextView"
                        android:layout_toEndOf="@+id/followersCountTextView"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerInParent="false"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="28sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bioRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countsLayout"
                    android:elevation="4dp"
                    android:padding="15dp"
                    android:layout_marginBottom="50dp">

                    <View
                        android:layout_marginTop="10dp"
                        android:id="@+id/layoutDivider"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginRight="300dp"
                        android:layout_marginLeft="300dp"
                        android:background="@android:color/white"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_below="@+id/layoutDivider"
                        android:id="@+id/bioTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center" />

                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_gravity="top"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleTextAppearance="@style/toolbarTextSize"
                app:titleMarginStart="-50sp"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@android:color/white"
                android:title="Collapsing Toolbar"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:numColumns="auto_fit"
            android:id="@+id/profileCinglesRecyclerView"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
