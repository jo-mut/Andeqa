<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sing_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cinggl.cinggl.ui.SingUpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="36dp"
                    android:id="@+id/firstNameEditText"
                    android:layout_width="170dp"
                    android:hint="First Name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="191dp"
                    android:layout_marginStart="191dp"
                    android:layout_marginTop="36dp"
                    android:id="@+id/secondNameEditText"
                    android:hint="Last Name" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="97dp"
                    android:id="@+id/usernameEditText"
                    android:layout_alignRight="@+id/secondNameEditText"
                    android:layout_alignEnd="@+id/secondNameEditText"
                    android:hint="Username"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/confirmPasswordEditText"
                    android:hint="Confirm Password"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/usernameEditText"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/passwordEditText"
                    android:hint="Password"
                    android:layout_below="@+id/confirmPasswordEditText"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:text="Sign Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signUpButton"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textStyle="normal|bold"
                    android:background="#0077b5"
                    android:layout_marginTop="85dp"
                    android:layout_below="@+id/passwordEditText"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <RadioButton
                    android:text="Female"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/femaleRadioButton"
                    android:layout_alignBaseline="@+id/maleRadioButton"
                    android:layout_alignBottom="@+id/maleRadioButton"
                    android:layout_alignLeft="@+id/secondNameEditText"
                    android:layout_alignStart="@+id/secondNameEditText" />

                <RadioButton
                    android:text="Male"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/maleRadioButton"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/passwordEditText"
                    android:layout_alignRight="@+id/firstNameEditText"
                    android:layout_alignEnd="@+id/firstNameEditText" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
