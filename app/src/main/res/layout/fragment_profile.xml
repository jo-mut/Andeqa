<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cinggl.cinggl.profile.ProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </android.support.v7.widget.Toolbar>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="223dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bioTextView"
                android:text="Bio"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/acountUsernameTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp" />

            <TextView
                android:text="Account Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acountUsernameTextView"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:layout_below="@+id/profileImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp" />

            <ImageView
                app:srcCompat="@drawable/profile"
                android:layout_marginTop="16dp"
                android:id="@+id/profileImageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:text="Following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/followingTextView"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_alignBottom="@+id/followersTextView"
                android:layout_alignTop="@+id/followersTextView"
                android:layout_toRightOf="@+id/profileImageView"
                android:layout_toEndOf="@+id/profileImageView" />

            <TextView
                android:text="Followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/followersTextView"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="17dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/profileImageView"
                android:layout_toStartOf="@+id/profileImageView" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/followingTextView"
                android:layout_toRightOf="@+id/acountUsernameTextView"
                android:layout_toEndOf="@+id/acountUsernameTextView"
                android:id="@+id/followingCountTextView" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/followingCountTextView"
                android:layout_alignRight="@+id/followersTextView"
                android:layout_alignEnd="@+id/followersTextView"
                android:id="@+id/followersCountTextView"
                android:layout_alignLeft="@+id/acountUsernameTextView"
                android:layout_alignStart="@+id/acountUsernameTextView" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="21dp"
                android:id="@+id/walletTextView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_view_module_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/imageView4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_favorite_black_24dp"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toLeftOf="@+id/walletTextView"
                android:layout_toStartOf="@+id/walletTextView"
                android:id="@+id/imageView5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_view_list_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView6" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
