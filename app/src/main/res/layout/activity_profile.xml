<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cinggl.cinggl.profile.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="223dp">

        <ImageView
            app:srcCompat="@drawable/profile"
            android:layout_marginTop="29dp"
            android:id="@+id/profileImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:cropToPadding="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userNameEditText"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:hint="Enter your username"
            android:textAlignment="center"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignBottom="@+id/profileImageView"
            android:layout_toLeftOf="@+id/setUpAccountButton"
            android:layout_toStartOf="@+id/setUpAccountButton" />

        <Button
            android:text="Done"
            android:id="@+id/setUpAccountButton"
            android:textSize="10sp"
            android:background="@drawable/btn_background"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_height="30dp"
            android:layout_width="50dp"
            android:layout_alignBottom="@+id/userNameEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
