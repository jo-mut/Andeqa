<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/collectionLinearLayout">

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/collectionCoverImageView"
            android:scaleType="centerCrop"
            android:alpha="0.4"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/favoriteRelativeLayout"
                android:background="#44000000"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">


            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/favoriteRelativeLayout"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/blue_grey_50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/collectionNameTextView"
                        android:textSize="14sp"
                        android:text="" />

                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/blue_grey_50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/collectionsNoteTextView"
                        android:textSize="12sp"
                        android:text="" />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>