<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/profilePictureImageView"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:elevation="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECEFF1"
        android:elevation="0dp"
        android:padding="10dp">

        <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountUsernameTextView"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp" />

        <TextView
            android:text="Write something about yourself and please avoid being valgur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bioTextView"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/accountUsernameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/sendMessageImageView" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:text="Cingles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/cinglesTextView"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:textSize="16sp" />

            <TextView
                android:text="Followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cinglesTextView"
                android:layout_centerHorizontal="true"
                android:id="@+id/followersTextView"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/followersTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/followingTextView"
                android:text="Following"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:layout_marginRight="10dp"
                android:textSize="16sp" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/followersTextView"
                android:layout_alignLeft="@+id/followersTextView"
                android:layout_alignStart="@+id/followersTextView"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:id="@+id/followersCountTextView"
                android:textSize="12sp" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/followingTextView"
                android:layout_alignLeft="@+id/followingTextView"
                android:layout_alignStart="@+id/followingTextView"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:id="@+id/followingCountTextView"
                android:textSize="12sp" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:id="@+id/cinglesCountTextView"
                android:textSize="12sp"
                android:layout_alignTop="@+id/followersCountTextView"
                android:layout_alignLeft="@+id/cinglesTextView"
                android:layout_alignStart="@+id/cinglesTextView" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>