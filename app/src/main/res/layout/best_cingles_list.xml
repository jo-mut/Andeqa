<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp">

                <TextView
                    android:text="15th April, 2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentDateTextView"
                    android:textStyle="normal|bold"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:padding="3dp">

                <TextView
                    android:text="Cingle of the Day:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/cingleMomentTextView"
                    android:textStyle="normal|bold"
                    android:textSize="17sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="27dp"
                    android:id="@+id/cingleImageView" />

                <TextView
                    android:text="Cingle Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cingleMomentTextView"
                    android:layout_toRightOf="@+id/cingleImageView"
                    android:layout_toEndOf="@+id/cingleImageView"
                    android:layout_marginTop="18dp"
                    android:id="@+id/cingleDateTextView"
                    android:textSize="17sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:text="Worth:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/cingleImageView"
                    android:layout_toRightOf="@+id/cingleImageView"
                    android:layout_toEndOf="@+id/cingleImageView"
                    android:layout_marginBottom="18dp"
                    android:id="@+id/cingleWorthTextView"
                    android:textSize="17sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:text="Cingle Creator:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleCreatorTextView"
                    android:textSize="17sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/cingleWorthTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:padding="3dp">

                <TextView
                    android:text="#TheCitiesOfLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleTitleTextView"
                    android:textSize="17sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="206dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/test"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:padding="3dp">


                <TextView
                    android:text="The future of tomorrow; the cities of lights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleDescriptionTextView"
                    android:textSize="16sp"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_more_vert_black_24dp"
                    android:id="@+id/cingleSettingsImageView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    tools:scaleType="centerCrop"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_expand_more_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="39dp"
                    android:layout_marginEnd="39dp"
                    android:id="@+id/moreCinglesImageView"
                    android:layout_alignParentTop="true"
                    tools:scaleType="centerCrop"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_favorite_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/likesImageView"
                    tools:scaleType="centerCrop"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="55dp"
                    android:layout_marginStart="55dp"
                    android:id="@+id/commentsImageView"
                    tools:scaleType="centerCrop"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Streaming comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/commentsStreamTextView"
                    android:layout_alignParentTop="true"
                    android:textAlignment="viewStart"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />
            </RelativeLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>