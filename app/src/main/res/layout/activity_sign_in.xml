<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sing_up_with"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cinggl.cinggl.ui.SignInActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:gravity="center_horizontal">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="211dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:background="#ECEFF1"
            android:layout_height="200dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/usernameEditText"
                android:layout_marginTop="5dp"
                android:hint="Name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordEditText"
                android:layout_marginTop="20dp"
                android:hint="Password"/>

            <Button
                android:text="Sign In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sIgnInButton"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:layout_marginTop="15dp"
                android:background="#0077b5" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_weight="0.24">

        <TextView
            android:text="Don't have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signInDescriptionTextView"
            android:textStyle="normal|bold|italic"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp" />

        <TextView
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signUpTextView"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/signInDescriptionTextView"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp" />

        <TextView
            android:text="Sing in with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:id="@+id/signInWithTextView"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">


            <!--<Button-->
                <!--android:text="Google +"-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="22dp"-->
                <!--android:layout_marginStart="22dp"-->
                <!--android:id="@+id/googleSignInButton"-->
                <!--android:background="@android:color/holo_red_light"-->
                <!--android:textAllCaps="false"-->
                <!--android:textSize="17sp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true" />-->

            <Button
                android:text="Facebook"
                android:layout_height="wrap_content"
                android:id="@+id/facebookSignUpButton"
                android:layout_weight="0.05"
                android:background="@color/colorAccent"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:layout_width="150dp"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/googleSignInButton"
                android:layout_width="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/facebookSignUpButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            </com.google.android.gms.common.SignInButton>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
