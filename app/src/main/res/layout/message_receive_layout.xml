<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/receiveRelativeLayout"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:paddingStart="5dp"
    android:paddingLeft="5dp"
    android:paddingEnd="70dp"
    android:paddingRight="70dp">

    <TextView
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:textSize="12sp"
        tools:text="06:00a.m." />

    <LinearLayout
        android:layout_gravity="start"
        android:background="@drawable/message_receive_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="" />


    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/statusRelativeLayout"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:textSize="12sp"
            tools:text="06:00a.m." />

        <!--<ImageView-->
        <!--android:layout_toRightOf="@+id/timeTextView"-->
        <!--android:layout_toEndOf="@+id/timeTextView"-->
        <!--android:id="@+id/statusImageView"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginStart="5dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:gravity="center_vertical|end"-->
        <!--android:src="@drawable/ic_remove_red_eye_black_24dp"-->
        <!--android:tint="@color/greyColor"-->
        <!--android:layout_width="15dp" />-->


    </RelativeLayout>


</LinearLayout>