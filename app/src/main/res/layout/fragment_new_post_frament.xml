<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="3dp"
    tools:context="com.cinggl.cinggl.camera.NewPostFrament"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:background="@drawable/profle_image_background"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:text="Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accountUsernameTextView"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/profileImageView"
                    android:layout_toEndOf="@+id/profileImageView"
                    android:layout_marginLeft="3dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_send_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/postCingleImageView"
                    android:padding="5dp"
                    android:layout_alignBottom="@+id/profileImageView" />

            </RelativeLayout>


            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="1"
                android:paddingRight="10dp"
                android:paddingLeft="3dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapWords"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"
                    android:id="@+id/cingleTitleEditText"
                    android:hint="Title"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:textStyle="normal|bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/greyColor" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="10dp">

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapSentences"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"
                    android:id="@+id/cingleDescriptionEditText"
                    android:hint="Description note"
                    android:textSize="16sp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/chosenImageView"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:keepScreenOn="false"
                android:layout_gravity="bottom">

                <ImageView
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_photo_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:id="@+id/galleryImageView"
                    android:layout_width="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_photo_camera_black_24dp"
                    android:layout_alignTop="@+id/galleryImageView"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/cameraImageView" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
