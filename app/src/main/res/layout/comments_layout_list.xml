<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/profle_image_background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/greyColor"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:text="user comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accountUsernameTextView"
            android:layout_alignLeft="@+id/accountUsernameTextView"
            android:layout_alignStart="@+id/accountUsernameTextView"
            android:id="@+id/commentTextView"
            android:textColor="@android:color/black" />

        <TextView
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/accountUsernameTextView"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/profileImageView"
            android:layout_toEndOf="@+id/profileImageView"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</LinearLayout>