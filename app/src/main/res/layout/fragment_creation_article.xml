<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.creation.CreationArticleFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/articleRelativeLayout"
        android:background="@drawable/transparent_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/articleTextView"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_alignParentBottom="true">

            <android.support.v7.widget.CardView
                android:id="@+id/articleAlphabet"
                android:layout_height="40dp"
                android:layout_width="40dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/articleFontColor"
                android:layout_height="40dp"
                android:layout_width="40dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/articleBackground"
                android:layout_height="40dp"
                android:layout_width="40dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
