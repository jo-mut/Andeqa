<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cingle_creation"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.creation.CreateCollectionPostActivity"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textColor="@color/grey_700"
        app:layout_scrollFlags="scroll|enterAlways"
        app:titleTextAppearance="@style/toolbarTextAppearance"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:background="@drawable/accent_color"
            app:srcCompat="@drawable/ic_done_circle_accent"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doneImageView"
            android:textColor="@android:color/white"
            android:layout_gravity="end"
            android:padding="10dp" />

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="5dp"
                    android:id="@+id/progressRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:secondaryProgress="0"
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:id="@+id/postRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/postImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/transparent_background" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine|textCapWords"
                            android:background="@drawable/edit_text_background"
                            android:id="@+id/titleEditText"
                            android:hint=" Write a Title..."
                            android:textSize="18sp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:freezesText="true"
                            android:layout_width="match_parent"
                            android:textStyle="normal|bold"
                            android:textColor="@color/grey_700"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_centerVertical="true"
                            android:paddingEnd="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleCountTextView"
                            android:textSize="9sp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/grey_700"
                            android:layout_below="@+id/titleEditText"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptionCountTextView"
                        android:textSize="9sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/grey_700"
                        android:layout_below="@+id/descriptionEditText"/>

                    <EditText
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textCapSentences"
                        android:ems="10"
                        android:background="@drawable/edit_text_background"
                        android:id="@+id/descriptionEditText"
                        android:hint="Write a description note (optional)"
                        android:textSize="16sp"
                        android:freezesText="true"
                        android:layout_width="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/grey_700"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <RelativeLayout
                    android:id="@+id/collectionsRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:clipToPadding="false"
                        android:padding="@dimen/item_off_set"
                        android:id="@+id/collectionsRecyclerView"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</LinearLayout>


