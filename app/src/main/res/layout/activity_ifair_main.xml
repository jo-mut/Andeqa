            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/categoryOne"
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <android.support.v7.widget.CardView
                    android:layout_marginBottom="0.1dp"
                    android:layout_toLeftOf="@+id/categoriesDividerOne"
                    android:layout_toStartOf="@+id/categoriesDividerOne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="?attr/colorPrimary">

                    <ImageView
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/test"
                        android:id="@+id/cingleBackingImageView"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/gradient_color"
                        android:scaleType="centerCrop"
                        android:layout_width="192dp" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="110dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Cingle Backing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="130dp"
                        android:textSize="12sp"
                        android:text="Backed Cingles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="150dp"
                        android:textSize="12sp"
                        android:text="Launch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:id="@+id/launchBackingActivity"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp" />


                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/categoriesDividerOne"
                    android:layout_width="0.1dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <android.support.v7.widget.CardView
                    android:layout_marginBottom="0.1dp"
