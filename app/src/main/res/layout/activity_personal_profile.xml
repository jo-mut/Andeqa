<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.profile.PersonalProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/default_gradient_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:id="@+id/header_cover_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profileCoverImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.1"
                    android:src="@color/transparentColor" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_height="120dp"
                    android:background="@drawable/profile_circular_border_imageview"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_width="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp" />

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="220dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fullNameTextView"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="1dp"
                        android:layout_centerInParent="true"
                        tools:ignore="RtlHardcoded" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/countsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="280dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postsCountTextView"
                        android:textSize="10sp"
                        android:background="@drawable/border_white"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="center"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="false"
                        android:layout_toLeftOf="@+id/followersCountTextView"
                        android:layout_toStartOf="@+id/followersCountTextView"
                        android:layout_marginRight="50dp"
                        android:layout_centerInParent="false"
                        android:layout_marginLeft="50dp"
                        android:layout_alignParentTop="true"
                        android:textColor="@android:color/white"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:text="@string/singles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/postsTextView"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="false"
                        android:layout_toLeftOf="@+id/followersCountTextView"
                        android:layout_toStartOf="@+id/followersCountTextView"
                        android:layout_below="@+id/postsCountTextView"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_centerHorizontal="false"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        tools:ignore="RtlHardcoded" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followersCountTextView"
                        android:textSize="10sp"
                        android:background="@drawable/border_white"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="center"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:text="Followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followersTextView"
                        android:layout_below="@+id/followersCountTextView"
                        android:layout_alignParentBottom="false"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followingCountTextView"
                        android:textSize="10sp"
                        android:background="@drawable/border_white"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_toRightOf="@+id/followersCountTextView"
                        android:layout_toEndOf="@+id/followersCountTextView"
                        android:textAlignment="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerInParent="false"
                        android:layout_marginLeft="50dp"
                        android:textColor="@android:color/white"
                        tools:ignore="RtlHardcoded,SmallSp" />

                    <TextView
                        android:text="@string/following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/followingTextView"
                        android:layout_below="@+id/followingCountTextView"
                        android:layout_toRightOf="@+id/followersCountTextView"
                        android:layout_toEndOf="@+id/followersCountTextView"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerInParent="false"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bioRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_below="@+id/countsLayout"
                    android:layout_marginBottom="50dp"
                    tools:ignore="UnusedAttribute">

                    <View
                        android:id="@+id/layoutDivider"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@android:color/white"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="150dp"
                        android:layout_marginBottom="15dp" />

                    <TextView
                        android:layout_below="@+id/layoutDivider"
                        android:id="@+id/bioTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:padding="10dp"
                        android:textAlignment="center" />

                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_gravity="top"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleTextAppearance="@style/toolbarTextAppearance"
                app:titleMarginStart="-50sp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@android:color/white"
                android:title="Collapsing Toolbar"
                app:layout_collapseMode="pin"
                tools:ignore="HardcodedText" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:numColumns="auto_fit"
            android:id="@+id/collectionsRecyclerView"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

