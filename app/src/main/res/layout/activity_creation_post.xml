<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cingle_creation"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.cinggl.cinggl.creation.CreationPostActivity"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/edit_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImageView"
                        android:background="@drawable/border_white"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/usernameTextView"
                        android:textStyle="normal|bold"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_alignTop="@+id/sharePostImageView"
                        android:layout_toRightOf="@+id/profileImageView"
                        android:layout_toEndOf="@+id/profileImageView" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_menu_send"
                        android:id="@+id/sharePostImageView"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:tint="@color/colorPrimary" />

                </RelativeLayout>


                <RelativeLayout
                    android:background="@drawable/border_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textCapWords"
                        android:ems="10"
                        android:id="@+id/cingleTitleEditText"
                        android:hint=" Write a Title..."
                        android:textSize="14sp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:freezesText="true"
                        android:layout_width="match_parent"
                        android:textStyle="normal|bold"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleCountTextView"
                        android:textSize="9sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/cingleTitleEditText"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:id="@+id/postRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.cinggl.cinggl.utils.ProportionalImageView
                            android:id="@+id/postImageView"
                            android:layout_alignParentTop="true"
                            android:adjustViewBounds="true"
                            android:layout_width="150dp"
                            android:layout_height="200dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dividerRelativeLayout"
                        android:layout_toRightOf="@+id/postRelativeLayout"
                        android:layout_toEndOf="@+id/postRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <View
                            android:layout_width="0.3dp"
                            android:layout_height="150dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:background="@color/greyColor" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/dividerRelativeLayout"
                        android:layout_toEndOf="@+id/dividerRelativeLayout"
                        android:id="@+id/tagRelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:padding="5dp"
                            android:text="Lace other Cinggulans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addTagsTextView"
                            android:textStyle="normal|bold"
                            android:textSize="14sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_alignTop="@+id/sharePostImageView" />



                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/border_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textCapSentences"
                        android:ems="10"
                        android:id="@+id/cingleDescriptionEditText"
                        android:hint="Write a description note..."
                        android:textSize="14sp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:freezesText="true"
                        android:layout_toStartOf="@+id/descriptionCountTextView"
                        android:layout_toLeftOf="@+id/descriptionCountTextView"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptionCountTextView"
                        android:textSize="9sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/cingleDescriptionEditText"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
