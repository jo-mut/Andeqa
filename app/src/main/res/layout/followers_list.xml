<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">

        <TextView
            android:text="Second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/secondNameTextView"
            android:layout_alignBaseline="@+id/firstNameTextView"
            android:layout_alignBottom="@+id/firstNameTextView"
            android:layout_toRightOf="@+id/firstNameTextView"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/profle_image_background" />

        <TextView
            android:text="First"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameTextView"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/profileImageView"
            android:layout_toEndOf="@+id/profileImageView" />

        <Button
            android:text="Follow"
            android:id="@+id/followButton"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/colour_btn_background"
            android:textAllCaps="false"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp" />

    </RelativeLayout>

</LinearLayout>