<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_cingle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cinggl.cinggl.camera.PostCingleActivity"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profileImageView"
            android:layout_toRightOf="@+id/profileImageView"
            android:layout_toEndOf="@+id/profileImageView"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/usernameTextView"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <ImageView
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:id="@+id/profileImageView"
            android:layout_width="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="50dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_send"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/postCingleImageView" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/select_image_background"
                android:id="@+id/chosenImageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="130sp"
                android:layout_height="130sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/chosenImageView"
                android:layout_toEndOf="@+id/chosenImageView"
                android:layout_alignBottom="@+id/chosenImageView"
                android:layout_marginLeft="3dp">

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"
                    android:id="@+id/cingleTitleEditText"
                    android:hint="Title"
                    android:textSize="16sp"
                    android:layout_width="235dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="10dp" />

                <TextView
                    android:text="Caption your Cingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleCaptionTextView"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="81dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:background="@drawable/edit_text_background"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/cingleDescriptionEditText"
                android:hint="Add Cingle description"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentBottom="true"
                android:paddingLeft="3dp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Lace Cingulans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/laceTextView"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="3dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/laceCingulansLayout">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/laceRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
