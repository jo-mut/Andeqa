<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cingle_creation"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.cinggl.cinggl.camera.CreateCingleActivity"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_above="@+id/edit_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImageView"
                        android:background="@drawable/profle_image_background"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:text="Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/accountUsernameTextView"
                        android:textStyle="normal|bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/profileImageView"
                        android:layout_toEndOf="@+id/profileImageView"
                        android:layout_marginLeft="3dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_send_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/postCingleImageView"
                        android:padding="5dp"
                        android:layout_alignBottom="@+id/profileImageView"
                        android:tint="@color/colorAccent" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <EditText
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textCapWords"
                        android:ems="10"
                        android:background="@drawable/edit_text_background"
                        android:id="@+id/cingleTitleEditText"
                        android:hint="Title"
                        android:textSize="16sp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:textStyle="normal|bold"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/colorAccent" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textCapSentences"
                        android:ems="10"
                        android:background="@drawable/edit_text_background"
                        android:id="@+id/cingleDescriptionEditText"
                        android:hint="Description note"
                        android:textSize="16sp"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.cinggl.cinggl.utils.ProportionalImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:background="@android:color/white" />

                    <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:id="@+id/chosenImageView"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:fitsSystemWindows="true"-->
                        <!--android:layout_alignParentTop="true"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:layout_alignParentStart="true"-->
                        <!--android:background="@android:color/white" />-->

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/edit_container"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            android:id="@+id/cameraImageView"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_photo_black_24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/galleryImageView"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_alignTop="@+id/cameraImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>
