<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_initialization"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/default_gradient_color"
    tools:context="com.andeqa.andeqa.home.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:src="@drawable/ic_launcher"
            android:layout_centerHorizontal="true"
            android:id="@+id/cingglLogoImageView"
            android:layout_centerInParent="true"
            android:layout_height="100sp"
            android:layout_width="100sp"
            android:adjustViewBounds="true" />

        <ProgressBar
            android:visibility="gone"
            android:layout_below="@+id/cingglLogoImageView"
            android:indeterminateOnly="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true" />

        <TextView
            android:text="Andeqa"
            android:textSize="40sp"
            android:textStyle="normal|bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appNameTextView"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
