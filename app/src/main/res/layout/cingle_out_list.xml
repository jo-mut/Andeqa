<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:soundEffectsEnabled="false"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/viewCountTextView"
                android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                android:layout_alignLeft="@+id/accountUsernameTextView"
                android:layout_alignStart="@+id/accountUsernameTextView"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:layout_below="@+id/accountUsernameTextView"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_margin="5dp" />

            <ImageView
                app:srcCompat="@drawable/profile"
                android:id="@+id/profileImageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:cropToPadding="true"
                android:scaleType="centerCrop" />

            <TextView
                android:text="8h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/timeTextView"
                android:padding="5dp"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <TextView
                android:text="username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/accountUsernameTextView"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/profileImageView"
                android:layout_toEndOf="@+id/profileImageView" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:text="TheCityOfLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/cingleTitleTextView"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        app:srcCompat="@drawable/test"
                        android:id="@+id/cingleImageView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="340dp"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="false" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_more_vert_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/cingleSettingsImageView"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp" />


            <TextView
                android:text="SP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="86dp"
                android:layout_marginEnd="86dp"
                android:id="@+id/senseCreditsTextView"
                android:textStyle="normal|bold"
                android:background="@drawable/circle_image_background"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/cingleSettingsImageView"
                android:layout_toStartOf="@+id/cingleSettingsImageView"
                android:textSize="12sp"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="  0 "
                android:drawableTop="@drawable/ic_favorite_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:id="@+id/likesCountTextView"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="  0"
                android:drawableTop="@drawable/ic_chat_bubble_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentsCountTextView"
                android:layout_toEndOf="@+id/likesCountTextView"
                android:layout_alignTop="@+id/likesCountTextView"
                android:layout_marginLeft="30dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:text="The Cities of Tomorrow; the Cities of Light, with the evolution of technology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cingleDescriptionTextView"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="Streaming comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/streamedCommentsTextView"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>