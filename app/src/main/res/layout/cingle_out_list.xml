<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    android:padding="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<View-->
        <!--android:layout_gravity="top"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.3dp"-->
        <!--android:background="@color/greyColor" />-->

    <android.support.v7.widget.CardView
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:soundEffectsEnabled="false"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:padding="2dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/viewCountTextView"
                    android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                    android:layout_alignLeft="@+id/accountUsernameTextView"
                    android:layout_alignStart="@+id/accountUsernameTextView"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/accountUsernameTextView"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_margin="5dp" />

                <ImageView
                    app:srcCompat="@drawable/profile"
                    android:id="@+id/chosenImageView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:text="8h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/timeTextView"
                    android:padding="5dp"
                    android:textStyle="normal|bold"
                    android:textSize="16sp" />

                <TextView
                    android:text="username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:id="@+id/accountUsernameTextView"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/chosenImageView"
                    android:layout_toEndOf="@+id/chosenImageView" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:text="TheCityOfLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/cingleTitleTextView"
                            android:textStyle="normal|bold"
                            android:textColor="@android:color/black"
                            android:padding="5dp"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            app:srcCompat="@drawable/test"
                            android:id="@+id/cingleImageView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_width="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="false"
                            android:layout_height="300dp" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/likesImageView"
                    android:layout_alignStart="@+id/likesImageView"
                    android:id="@+id/likesCountTextView"
                    android:layout_marginLeft="8dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_favorite_black_24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:id="@+id/likesImageView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/likesImageView"
                    android:layout_toEndOf="@+id/likesImageView"
                    android:layout_marginLeft="37dp"
                    android:layout_marginStart="37dp"
                    android:id="@+id/commentsImageView"
                    android:tint="@android:color/black" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="78dp"
                    android:layout_marginStart="78dp"
                    android:id="@+id/commentsCountTextView"
                    android:layout_alignTop="@+id/likesCountTextView" />

                <TextView
                    android:text="SP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="86dp"
                    android:layout_marginEnd="86dp"
                    android:id="@+id/senseCreditsTextView"
                    android:textStyle="normal|bold"
                    android:background="@drawable/circle_image_background"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/cingleSettingsImageView"
                    android:layout_toStartOf="@+id/cingleSettingsImageView" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_more_vert_black_24dp"
                    android:id="@+id/cingleSettingsImageView"
                    android:scaleType="centerCrop"
                    android:layout_alignBottom="@+id/senseCreditsTextView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <TextView
                    android:text="The Cities of Tomorrow; the Cities of Light, with the evolution of technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleDescriptionTextView"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/commentsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>



    <!--<View-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.3dp"-->
        <!--android:background="@color/greyColor" />-->
</LinearLayout>