<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cinggl.cinggl.ui.CingleOut">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <TextView
                    android:text="jo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/profileImageView"
                    android:layout_toEndOf="@+id/profileImageView"
                    android:layout_marginLeft="27dp"
                    android:layout_marginStart="27dp"
                    android:id="@+id/accountUsernameTextView"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewCountTextView"
                    android:layout_alignLeft="@+id/accountUsernameTextView"
                    android:layout_alignStart="@+id/accountUsernameTextView"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/accountUsernameTextView" />

                <TextView
                    android:text="Cingle#Worth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleHashtagWorthTextView"
                    android:layout_alignLeft="@+id/viewCountTextView"
                    android:layout_alignStart="@+id/viewCountTextView"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/viewCountTextView" />

                <TextView
                    android:text="CSCs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/cscsTextView"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:padding="5dp" />

                <ImageView
                    android:layout_width="50dp"
                    app:srcCompat="@drawable/profile"
                    android:id="@+id/profileImageView"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="5dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="423dp"
                android:paddingTop="5dp"
                android:layout_marginTop="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp">

                    <TextView
                        android:text="TheCityOfLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/cingleTitleTextView"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/black"
                        android:padding="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_circle_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/addCingleImageView"
                        android:paddingRight="5dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingEnd="2dp"
                    android:paddingStart="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/test"
                        android:id="@+id/cingleImageView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_height="350dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_more_vert_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/cingleSettingsImageView" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_favorite_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:id="@+id/likeImageView" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_attach_money_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="142dp"
                        android:layout_marginStart="142dp"
                        android:id="@+id/cingleWorthImageView" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:id="@+id/commentsImageView" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_expand_more_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="32dp"
                        android:layout_marginEnd="32dp"
                        android:id="@+id/moreCinglesImageView" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="The Cities of Tomorrow; the Cities of Light, with the evolution of technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/cingleDescriptionTextView"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" />

                <TextView
                    android:text="...more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/moreCingleDescriptionTextView"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_alignTop="@+id/slashDescriptionTextView" />

                <TextView
                    android:text="  |"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="150dp"
                    android:layout_marginEnd="150dp"
                    android:layout_marginTop="18dp"
                    android:id="@+id/slashDescriptionTextView"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:text="Cingle Lace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tradeMethodTextView"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_alignBaseline="@+id/moreCingleDescriptionTextView"
                    android:layout_alignBottom="@+id/moreCingleDescriptionTextView"
                    android:layout_toRightOf="@+id/moreCingleDescriptionTextView"
                    android:layout_toEndOf="@+id/moreCingleDescriptionTextView"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="view comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/commentsTextView"
                    android:layout_alignParentTop="true"
                    android:textStyle="normal|italic"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" />
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
