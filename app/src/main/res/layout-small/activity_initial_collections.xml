<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_grey_50"
    tools:context=".collections.InitialCollectionsActivity">

    <LinearLayout
        android:layout_above="@+id/doneRelativeLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="10dp"
            android:background="@drawable/top_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/grey_700"
                android:textSize="12sp"
                android:padding="10dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_by_following_collections" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:clipToPadding="false"
            android:padding="@dimen/item_off_set"
            android:id="@+id/collectionsRecyclerView"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/post_bottom_background"
        android:id="@+id/doneRelativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/colour_btn_background"
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Done" />
    </RelativeLayout>

</RelativeLayout>