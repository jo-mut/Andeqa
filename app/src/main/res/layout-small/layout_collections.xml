<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/collectionLinearLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/topLinearLayout"
            android:background="@drawable/top_background"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/profileImageView"
                    android:layout_toEndOf="@+id/profileImageView"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:id="@+id/nameRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/usernameTextView"
                        android:textSize="10sp"
                        android:textColor="@android:color/black"
                        android:textStyle="normal"
                        android:text="" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_margin="0.1dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/transparent_background"
                android:id="@+id/collectionCoverImageView"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/collectionDetailsLinearLayout"
                android:padding="5dp"
                android:alpha="0.8"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="75dp">

            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/collectionNameTextView"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="@android:color/white" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/collectionsNoteTextView"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="" />


            </LinearLayout>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/followingCountTextView"
                    android:textSize="9sp"
                    android:textColor="@android:color/white"
                    android:text="" />


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/post_bottom_background"
            android:id="@+id/followRelativeLayout"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:background="@drawable/colour_btn_background"
                android:id="@+id/followButton"
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>