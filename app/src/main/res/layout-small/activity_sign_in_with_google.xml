<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in_with_google"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_gradient_color"
    tools:context="com.andeqa.andeqa.registration.SignInWithGoogle">

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/appLogoImageView"
        android:layout_width="75sp"
        android:layout_height="75sp" />

    <TextView
        android:padding="7dp"
        android:textSize="12sp"
        android:text="Signing in..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appLogoImageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/signingInTextView"
        android:textColor="@color/greyColor" />

    <ProgressBar
        android:layout_below="@+id/signingInTextView"
        android:indeterminateOnly="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="75dp" />

    <TextView
        android:text="Andeqa"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appNameTextView"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>


