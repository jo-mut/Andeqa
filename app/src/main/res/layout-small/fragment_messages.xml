<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.message.MessagesFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/roomsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/placeHolderRelativeLayout">

        <ImageView
            app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
            android:id="@+id/imagePlaceHolder"
            android:layout_centerInParent="true"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:tint="@android:color/darker_gray" />

        <TextView
            android:layout_below="@+id/imagePlaceHolder"
            android:text="@string/messages_holder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:id="@+id/placeHolderTextView"
            android:textAlignment="center"
            android:padding="20dp"
            android:textSize="12sp"
            android:layout_centerInParent="true" />

    </RelativeLayout>


</RelativeLayout>
