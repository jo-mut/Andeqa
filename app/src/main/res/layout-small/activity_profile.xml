<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.andeqa.andeqa.profile.ProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/default_gradient_color"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMargin="16dp"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:paddingBottom="60dp"
                android:id="@+id/header_cover_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/profileCoverImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.1"
                    android:scaleType="centerCrop"
                    android:src="@color/transparentColor" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="75dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/profile_circular_border_imageview"
                    android:padding="10dp"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/nameRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileImageView"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/fullNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:text=""
                        android:textStyle="normal|bold" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/bioRelativeLayout"
                    android:layout_below="@+id/nameRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bioTextView"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textAlignment="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/countsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bioRelativeLayout">

                    <RelativeLayout
                        android:layout_toLeftOf="@+id/collectionsRelativeLayout"
                        android:layout_toStartOf="@+id/collectionsRelativeLayout"
                        android:id="@+id/singlesRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:id="@+id/singlesCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:padding="3dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/singlesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="singles"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/singlesCountTextView"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:id="@+id/collectionsRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="3dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/collectionsCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/collectionsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="collections"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/collectionsCountTextView"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/collectionsRelativeLayout"
                        android:layout_toEndOf="@+id/collectionsRelativeLayout"
                        android:id="@+id/postRelativeLayout"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:padding="3dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/postsCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/postsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/postsCountTextView"
                            android:text="posts"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sendMessageRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countsLayout"
                    android:layout_marginTop="20dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/sendMessageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/colour_btn_background"
                        android:minHeight="25dp"
                        android:paddingEnd="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingStart="15dp"
                        android:text="Send Message"
                        android:textSize="12sp" />

                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/transparentColor"
                app:titleTextColor="@android:color/white"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay" />


            <android.support.design.widget.TabLayout
                android:layout_gravity="bottom"
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextAppearance="@style/tablayoutTextAppearance"
                app:tabIndicatorColor="@android:color/white"
                app:tabSelectedTextColor="@color/colorAccent"
                app:tabTextColor="@android:color/white" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>
