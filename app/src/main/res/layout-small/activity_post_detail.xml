<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.home.PostDetailActivity">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                app:titleTextAppearance="@style/toolbarTextAppearance"
                android:layout_height="42dp"
                android:background="@drawable/default_gradient_color"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@android:color/white"
                app:contentInsetStart="0dp"
                app:contentInsetLeft="0dp">

            </android.support.v7.widget.Toolbar>

           <LinearLayout
               android:id="@+id/itemLinearLayout"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <RelativeLayout
                   android:id="@+id/topRelativeLayout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <android.support.v7.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:cardPreventCornerOverlap="false"
                       app:cardCornerRadius="0dp"
                       app:cardElevation="0dp"
                       app:cardMaxElevation="1dp">

                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="5dp">

                               <de.hdodenhof.circleimageview.CircleImageView
                                   android:layout_margin="5dp"
                                   android:id="@+id/profileImageView"
                                   android:layout_width="40dp"
                                   android:layout_height="40dp"
                                   android:layout_centerVertical="true"
                                   android:layout_alignParentLeft="true"
                                   android:layout_alignParentStart="true"
                                   android:scaleType="centerCrop" />

                               <LinearLayout
                                   android:layout_toStartOf="@+id/settingsRelativeLayout"
                                   android:layout_toLeftOf="@+id/settingsRelativeLayout"
                                   android:layout_toRightOf="@+id/profileImageView"
                                   android:layout_toEndOf="@+id/profileImageView"
                                   android:orientation="vertical"
                                   android:padding="5dp"
                                   android:layout_centerVertical="true"
                                   android:id="@+id/nameRelativeLayout"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <TextView
                                       android:textColor="@color/grey_700"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/usernameTextView"
                                       android:textSize="12sp"
                                       android:textStyle="normal|bold"
                                       android:text="" />

                                   <LinearLayout
                                       android:visibility="gone"
                                       android:id="@+id/creditsLinearLayout"
                                       android:orientation="horizontal"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">

                                       <TextView
                                           android:textColor="@color/grey_700"
                                           android:layout_gravity="center_vertical"
                                           android:text=""
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:id="@+id/creditsTextView"
                                           android:textStyle="normal|bold"
                                           android:textSize="10sp"
                                           android:paddingTop="3dp"
                                           android:paddingBottom="3dp" />

                                   </LinearLayout>

                               </LinearLayout>

                               <RelativeLayout
                                   android:padding="5dp"
                                   android:layout_centerVertical="true"
                                   android:layout_alignParentRight="true"
                                   android:layout_alignParentEnd="true"
                                   android:layout_margin="2dp"
                                   android:id="@+id/settingsRelativeLayout"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">

                                   <ImageView
                                       android:id="@+id/shareImageView"
                                       android:layout_width="18dp"
                                       android:layout_height="18dp"
                                       android:tint="@color/grey_700"
                                       app:srcCompat="@drawable/ic_settings_vert" />

                               </RelativeLayout>

                           </RelativeLayout>

                       </LinearLayout>

                   </android.support.v7.widget.CardView>

               </RelativeLayout>

               <android.support.constraint.ConstraintLayout
                   android:layout_margin="0.1dp"
                   android:id="@+id/postConstrantLayout"
                   android:background="@android:color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:id="@+id/postImageView"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:scaleType="centerCrop"
                       android:layout_width="match_parent"
                       android:layout_height="0dp" />

               </android.support.constraint.ConstraintLayout>

               <RelativeLayout
                   android:id="@+id/bottomRelativeLayout"
                   android:layout_marginBottom="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <android.support.v7.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:cardPreventCornerOverlap="false"
                       app:cardCornerRadius="0dp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="2dp"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <LinearLayout
                                   android:orientation="horizontal"
                                   android:id="@+id/toolsRelativeLayout"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <LinearLayout
                                       android:orientation="horizontal"
                                       android:id="@+id/viewsLinearLayout"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content">

                                       <ImageView
                                           android:id="@+id/viewsImageView"
                                           android:layout_width="18dp"
                                           android:layout_height="18dp"
                                           android:tint="@color/grey_700"
                                           app:srcCompat="@drawable/ic_views" />


                                       <TextView
                                           android:textColor="@color/grey_700"
                                           android:id="@+id/viewsCountTextView"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="0"
                                           android:padding="2dp"
                                           android:textSize="10sp"
                                           android:textStyle="normal" />


                                   </LinearLayout>

                                   <LinearLayout
                                       android:id="@+id/commentsLinearLayout"
                                       android:orientation="horizontal"
                                       android:layout_gravity="center_vertical"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content">

                                       <ImageView
                                           android:id="@+id/commentsImageView"
                                           android:layout_width="18dp"
                                           android:layout_height="18dp"
                                           android:tint="@color/grey_700"
                                           app:srcCompat="@drawable/ic_comment" />

                                       <TextView
                                           android:textColor="@color/grey_700"
                                           android:id="@+id/commentsCountTextView"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="0"
                                           android:textSize="10sp"
                                           android:padding="2dp"
                                           android:layout_gravity="bottom"
                                           android:textStyle="normal" />

                                   </LinearLayout>

                               </LinearLayout>

                           </RelativeLayout>

                           <RelativeLayout
                               android:visibility="gone"
                               android:id="@+id/titleRelativeLayout"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/titleTextView"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text=""
                                   android:textColor="@color/grey_700"
                                   android:textSize="12sp"
                                   android:textStyle="normal|bold" />

                           </RelativeLayout>

                           <RelativeLayout
                               android:visibility="gone"
                               android:id="@+id/descriptionRelativeLayout"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/descriptionTextView"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text=""
                                   android:textColor="@color/grey_700"
                                   android:textSize="12sp" />

                           </RelativeLayout>

                       </LinearLayout>

                   </android.support.v7.widget.CardView>

               </RelativeLayout>

           </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
