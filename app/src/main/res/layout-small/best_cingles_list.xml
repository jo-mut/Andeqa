<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="none"
    android:background="#e4e4e4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:padding="0.3dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:paddingTop="3dp">

            <RelativeLayout
                android:id="@+id/cingleMomentRelativeLayout"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Cingle Of The Moment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleMomentTextView"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="5dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"  />


                <View
                    android:layout_below="@+id/cingleMomentTextView"
                    android:id="@+id/cingleMomentView"
                    android:background="#e4e4e4"
                    android:layout_width="match_parent"
                    android:layout_height="5dp">

                </View>

            </RelativeLayout>

            <RelativeLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp">

                <TextView
                    android:text="Cingle Creator:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleCreatorTextView"
                    android:textSize="10sp"
                    android:textStyle="normal|bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                    app:srcCompat="@drawable/profle_image_background"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/profileImageView" />

                <TextView
                    android:text="username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/usernameTextView"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/cingleCreatorTextView"
                    android:layout_toEndOf="@+id/cingleCreatorTextView"
                    android:textSize="10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <TextView
                    android:text="Cingle Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleDateTextView"
                    android:textSize="10sp"
                    android:textStyle="normal|bold"
                    android:layout_centerVertical="true" />

                <TextView
                    android:text="10th Sep, 2016"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/datePostedTextView"
                    android:layout_alignBaseline="@+id/cingleDateTextView"
                    android:layout_alignBottom="@+id/cingleDateTextView"
                    android:layout_toRightOf="@+id/cingleDateTextView"
                    android:layout_toEndOf="@+id/cingleDateTextView"
                    android:textSize="10sp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cingleTradingRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <TextView
                    android:text="Listed on Ifair:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="10sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_alignParentTop="false"
                    android:id="@+id/cingleListedOnIfairTextView"
                    android:layout_centerVertical="true" />


                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleTradeMethodTextView"
                    android:textStyle="normal|bold"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/cingleListedOnIfairTextView"
                    android:padding="5dp" />

            </RelativeLayout>


            <RelativeLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Cingle Owner:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleOwnerTitleTextView"
                    android:textStyle="normal|bold"
                    android:textSize="10sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/cingleOwnerTitleTextView"
                    android:layout_toEndOf="@+id/cingleOwnerTitleTextView"
                    android:id="@+id/cingleOwnerTextView"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:layout_centerVertical="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                    app:srcCompat="@drawable/profle_image_background"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/ownerImageView" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <TextView
                    android:text="Cingle Sense Credits:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleSenseCreditsTextView"
                    android:textSize="10sp"
                    android:textStyle="normal|bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:text="CSCs 0.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleSenseCreditsCountTextView"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/cingleSenseCreditsTextView"
                    android:layout_toEndOf="@+id/cingleSenseCreditsTextView"
                    android:textSize="10sp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:id="@+id/titleRelativeLayout">

                <TextView
                    android:text="TheCitiesOfLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleTitleTextView"
                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cinggl.cinggl.ProportionalImageView
                    android:id="@+id/cingleImageView"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="150dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:id="@+id/cingleToolsRelativeLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_favorite_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/likesImageView"
                    tools:scaleType="centerCrop"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_more_vert_black_24dp"
                    tools:scaleType="centerCrop"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentsCountTextView"
                    android:layout_toEndOf="@+id/commentsImageView"
                    android:layout_toRightOf="@+id/commentsImageView"
                    android:textSize="9sp"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/commentsImageView"
                    tools:scaleType="centerCrop"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/likesImageView"
                    android:layout_toEndOf="@+id/likesImageView"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/likesRecyclerView"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/likesCountTextView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:background="@drawable/text_border_default"
                    android:scaleType="centerCrop"
                    android:cropToPadding="false"
                    android:layout_toRightOf="@+id/likesRecyclerView"
                    android:layout_toEndOf="@+id/likesRecyclerView"
                    android:layout_marginLeft="5dp"
                    android:textSize="6sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:id="@+id/descriptionRelativeLayout">

                <TextView
                    android:text="The future of tomorrow; the cities of lights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cingleDescriptionTextView"
                    android:textSize="10sp"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </LinearLayout>

</LinearLayout>