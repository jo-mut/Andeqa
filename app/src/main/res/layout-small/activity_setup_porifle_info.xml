<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setup_porifle_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cinggl.cinggl.profile.SetupPorifleInfo"
    android:background="@drawable/gradient_color">

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp">


                <TextView
                    android:text="Create your personal profile info and add your profile picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="21dp"
                    android:id="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textAlignment="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="0.07"
                android:layout_marginBottom="15dp"
                android:layout_height="200dp">


                <ViewAnimator
                    android:id="@+id/animator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateFirstView="false"
                    android:layout_centerInParent="true">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilePictureImageView"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:background="@drawable/profile_circular_border_imageview"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:padding="10dp" />

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                </ViewAnimator>


                <ImageButton
                    android:src="@drawable/ic_menu_camera"
                    android:id="@+id/updateProfilePictureImageButton"
                    android:layout_alignBottom="@+id/animator"
                    android:layout_alignRight="@+id/animator"
                    android:layout_alignEnd="@+id/animator"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="First Name"
                    android:inputType="textCapWords"
                    android:nextFocusDown="@+id/passwordEditText"
                    android:padding="15sp"
                    android:textColor="@android:color/black"
                    android:layout_toLeftOf="@+id/nameDivider"
                    android:layout_toStartOf="@+id/nameDivider"
                    android:textSize="16sp"
                    android:id="@+id/fisrtNameEditText"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:layout_width="150sp"
                    android:layout_centerHorizontal="false"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp" />

                <View
                    android:id="@+id/nameDivider"
                    android:layout_height="0.3dp"
                    android:layout_alignParentLeft="false"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="false"
                    android:layout_centerInParent="true"
                    android:layout_width="1dp"
                    android:layout_marginBottom="40dp" />



                <EditText
                    android:inputType="textCapWords"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="Second Name"
                    android:nextFocusDown="@+id/passwordEditText"
                    android:padding="15sp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/nameDivider"
                    android:layout_toEndOf="@+id/nameDivider"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/secondNameEditText"
                    android:layout_alignParentLeft="true"
                    android:layout_width="150sp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="5dp" />


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/usernameEditText"
                    android:freezesText="true"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/input_background"
                    android:hint="Username"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bioRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:id="@+id/bioEditText"
                    android:hint="Bio line"
                    android:freezesText="true"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/input_background"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="10dp" />
            </RelativeLayout>

            <Button
                android:text="Done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/createInfoButton"
                android:layout_below="@+id/bioRelativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/colour_btn_background"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
