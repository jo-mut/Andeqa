<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_grey_50"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/bottom_fragment_background"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textStyle="normal|bold"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Post settings" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:id="@+id/deleteRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/grey_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Delete"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:visibility="gone"
        android:id="@+id/editRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/grey_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Edit your post"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:visibility="gone"
        android:id="@+id/shareRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/grey_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Share via..."
            android:textSize="12sp" />

        <ProgressBar
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:secondaryProgress="0"
            android:id="@+id/progressBar"
            android:progressDrawable="@drawable/progress_drawable"
            style="?android:attr/progressBarStyle"
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:visibility="gone"
        android:id="@+id/reportRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">


        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/grey_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Report"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>