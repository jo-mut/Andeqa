<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.andeqa.andeqa.settings.ConfirmDeleteFragment"
    android:background="@android:color/white">

<!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:padding="5dp"
        android:layout_height="50dp"
        android:layout_width="225dp">

        <TextView
            android:text="Are you want to delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:id="@+id/textView"
            android:textSize="12sp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="1dp"
            android:layout_toStartOf="@+id/dividerView"
            android:layout_toLeftOf="@+id/dividerView"
            android:background="@drawable/border_rectangle"
            android:id="@+id/YesRelativeLayout"
            android:layout_height="38sp"
            android:layout_width="match_parent">

            <TextView
                android:text="Yes"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textSize="14sp" />


        </RelativeLayout>

        <View
            android:id="@+id/dividerView"
            android:layout_width="0.1dp"
            android:layout_height="0.1dp"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/dividerView"
            android:layout_toEndOf="@+id/dividerView"
            android:background="@drawable/border_rectangle"
            android:id="@+id/noRelativeLayout"
            android:layout_height="38sp"
            android:layout_width="match_parent">

            <TextView
                android:text="No"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>


