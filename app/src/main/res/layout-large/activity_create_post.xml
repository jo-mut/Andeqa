<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cingle_creation"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.creation.CreatePostActivity"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:layout_scrollFlags="scroll|enterAlways"
        app:titleTextAppearance="@style/toolbarTextAppearance"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp"
                android:id="@+id/backImageView"
                android:padding="10dp"
                android:layout_centerVertical="true" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_toRightOf="@+id/backImageView"
                android:layout_toEndOf="@+id/backImageView"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:text="Post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postTextView"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:layout_gravity="right"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="27sp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_above="@+id/edit_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <EditText
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine|textCapWords"
                        android:background="@drawable/edit_text_background"
                        android:id="@+id/titleEditText"
                        android:hint=" Write a Title..."
                        android:textSize="27sp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:freezesText="true"
                        android:layout_width="match_parent"
                        android:textStyle="normal|bold"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleCountTextView"
                        android:textSize="9sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/titleEditText"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptionCountTextView"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/descriptionEditText"/>

                    <EditText
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine|textCapSentences"
                        android:ems="10"
                        android:background="@drawable/edit_text_background"
                        android:id="@+id/descriptionEditText"
                        android:hint="Write a description note (optional)"
                        android:textSize="24sp"
                        android:freezesText="true"
                        android:layout_width="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/postImageRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.andeqa.andeqa.utils.ProportionalImageView
                        android:id="@+id/postImageView"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/transparent_background" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/addRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/addImageView"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_plus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addPostTextView"
                        android:textSize="21sp"
                        android:layout_below="@+id/addImageView"
                        android:text="Tap to add your collection cover"
                        android:layout_centerHorizontal="true"
                        android:padding="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp" />


                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</LinearLayout>


