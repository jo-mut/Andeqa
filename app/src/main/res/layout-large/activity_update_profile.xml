<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.profile.UpdateProfileActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/default_gradient_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="0.07"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profileCoverImageView"
                    android:src="@drawable/transparent_background"
                    android:alpha="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />


                <ViewAnimator
                    android:id="@+id/animator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateFirstView="false"
                    android:layout_centerInParent="true">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImageView"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:background="@drawable/profile_circular_border_imageview"
                        android:layout_width="120dp"
                        android:layout_height="140dp" />

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                </ViewAnimator>

                <ImageButton
                    android:src="@drawable/ic_menu_camera"
                    android:layout_marginLeft="75dp"
                    android:layout_marginStart="75dp"
                    android:id="@+id/profilePhotoImageButton"
                    android:layout_alignBottom="@+id/animator"
                    android:layout_alignLeft="@+id/animator"
                    android:layout_alignStart="@+id/animator"
                    android:layout_height="45dp"
                    android:layout_width="45dp" />

                <TextView
                    android:text="Update Cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/updateCoverTextView"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="10dp"
                    android:padding="5dp" />

            </RelativeLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                android:title="Collapsing Toolbar"
                app:layout_collapseMode="pin"
                tools:ignore="HardcodedText,UnusedAttribute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:srcCompat="@drawable/ic_check"
                        android:id="@+id/doneEditingImageView"
                        android:padding="10dp"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            app:contentPadding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="30dp">

                        <ImageView
                            app:srcCompat="@drawable/ic_person"
                            android:id="@+id/imageView"
                            android:layout_centerVertical="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:background="@drawable/input_background"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:paddingRight="5dp"
                            android:paddingEnd="5dp"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:id="@+id/usernameEditText"
                            android:hint="Username"
                            android:freezesText="true"
                            android:textSize="21sp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="match_parent"
                            android:layout_centerVertical="true" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="30dp">

                        <ImageView
                            app:srcCompat="@drawable/ic_description_black_24dp"
                            android:id="@+id/imageView3"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="false"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:background="@drawable/input_background"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:paddingRight="5dp"
                            android:paddingEnd="5dp"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:inputType="textMultiLine"
                            android:id="@+id/bioEditText"
                            android:hint="Bio line"
                            android:freezesText="true"
                            android:textSize="21sp"
                            android:layout_alignParentTop="false"
                            android:layout_width="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/statusCountTextView"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:layout_below="@+id/bioEditText"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="30dp">

                        <ImageView
                            app:srcCompat="@drawable/ic_account"
                            android:layout_centerVertical="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:background="@drawable/input_background"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:paddingRight="5dp"
                            android:paddingEnd="5dp"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:id="@+id/fisrtNameEditText"
                            android:hint="First Name"
                            android:textSize="21sp"
                            android:freezesText="true"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="match_parent"
                            android:layout_centerVertical="true" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="30dp">

                        <ImageView
                            app:srcCompat="@drawable/ic_account"
                            android:layout_centerVertical="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:background="@drawable/input_background"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:paddingRight="5dp"
                            android:paddingEnd="5dp"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:id="@+id/secondNameEditText"
                            android:hint="Second Name"
                            android:textSize="21sp"
                            android:freezesText="true"
                            android:layout_width="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>

