<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sendLinearLayout"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingLeft="70dp"
    android:paddingStart="70dp">

    <TextView
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:textSize="18sp"
        tools:text="06:00a.m." />

    <LinearLayout
        android:layout_gravity="end"
        android:background="@drawable/message_send_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|start"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            tools:text="" />

    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="end"
        android:id="@+id/statusRelativeLayout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:textSize="18sp"
            tools:text="06:00a.m." />

        <!--<ImageView-->
            <!--android:layout_toRightOf="@+id/timeTextView"-->
            <!--android:layout_toEndOf="@+id/timeTextView"-->
            <!--android:id="@+id/statusImageView"-->
            <!--android:gravity="center_vertical|end"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:src="@drawable/ic_remove_red_eye_black_24dp"-->
            <!--android:tint="@color/greyColor"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp" />-->


    </RelativeLayout>

</LinearLayout>