<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.wallet.WalletActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        app:titleTextAppearance="@style/toolbarTextAppearance"
        android:layout_height="84dp"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@android:color/white"/>

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:padding="10dp"
                   android:layout_margin="10dp"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="uCredit Balance"
                       android:textStyle="normal|bold"
                       android:textSize="30sp"
                       android:id="@+id/amountReceivedTextView" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="uC 9000000000"
                       android:textSize="21sp"
                       android:id="@+id/walletBalanceTextView"/>


               </LinearLayout>

           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:id="@+id/historyLinearLayout"
                   android:layout_margin="10dp"
                   android:padding="10dp"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <RelativeLayout
                           android:visibility="gone"
                           android:layout_centerInParent="true"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:id="@+id/emptyRelativeLayout">


                           <TextView
                               android:text="You have not transaction history"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentTop="false"
                               android:layout_centerHorizontal="true"
                               android:layout_marginTop="18dp"
                               android:id="@+id/emptyTextView"
                               android:textSize="21sp"
                               android:layout_centerVertical="true" />

                       </RelativeLayout>

                       <android.support.v7.widget.RecyclerView
                           android:overScrollMode="never"
                           android:id="@+id/transactionHistoryRecyclerView"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                       </android.support.v7.widget.RecyclerView>

                   </RelativeLayout>

               </LinearLayout>


           </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
