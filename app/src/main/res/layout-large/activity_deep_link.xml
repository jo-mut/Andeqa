<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.andeqa.andeqa.home.DeepLinkActivity">

    <ScrollView
        android:overScrollMode="never"
        android:layout_marginBottom="150dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/itemLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/postConstrantLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/postImageView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_margin="5dp"
                                android:id="@+id/profileImageView"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:layout_toLeftOf="@+id/settingsRelativeLayout"
                                android:layout_toStartOf="@+id/settingsRelativeLayout"
                                android:layout_toRightOf="@+id/profileImageView"
                                android:layout_toEndOf="@+id/profileImageView"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:layout_centerVertical="true"
                                android:id="@+id/nameRelativeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/usernameTextView"
                                    android:textSize="21sp"
                                    android:textColor="@color/grey_700"
                                    android:textStyle="normal|bold"
                                    android:text="" />


                            </LinearLayout>

                            <RelativeLayout
                                android:padding="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/settingsRelativeLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/shareImageView"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:tint="@color/grey_700"
                                    app:srcCompat="@drawable/ic_settings_vert" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/titleRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/titleTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/grey_700"
                                android:textSize="21sp"
                                android:textStyle="normal|bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/descriptionRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/descriptionTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/grey_700"
                                android:textSize="21sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!--<LinearLayout-->
                            <!--android:layout_marginBottom="10dp"-->
                            <!--android:layout_gravity="start"-->
                            <!--android:orientation="horizontal"-->
                            <!--android:id="@+id/toolsRelativeLayout"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content">-->

                            <!--<LinearLayout-->
                            <!--android:id="@+id/commentsLinearLayout"-->
                            <!--android:orientation="horizontal"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content">-->

                            <!--<ImageView-->
                            <!--android:id="@+id/commentsImageView"-->
                            <!--android:layout_width="24dp"-->
                            <!--android:layout_height="24dp"-->
                            <!--android:tint="@color/grey_700"-->
                            <!--app:srcCompat="@drawable/ic_comment" />-->

                            <!--<TextView-->
                            <!--android:id="@+id/commentsCountTextView"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="0"-->
                            <!--android:textSize="12sp"-->
                            <!--android:padding="10dp"-->
                            <!--android:layout_gravity="bottom"-->
                            <!--android:textStyle="normal" />-->

                            <!--</LinearLayout>-->

                            <!--</LinearLayout>-->

                            <RelativeLayout
                                android:id="@+id/commentsRelativeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/commentsRecyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:overScrollMode="never" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        app:titleTextAppearance="@style/toolbarTextAppearance"
        android:layout_height="84dp"
        android:background="@drawable/transparent_background"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@android:color/white"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_toLeftOf="@+id/sendCommentImageView"
                android:layout_toStartOf="@+id/sendCommentImageView"
                android:background="@drawable/border_rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:maxHeight="150dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/commentEditText"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:hint="Comment on this post" />

            <ImageView
                android:background="@drawable/accent_color"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/ic_send"
                android:id="@+id/sendCommentImageView"
                android:tint="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
