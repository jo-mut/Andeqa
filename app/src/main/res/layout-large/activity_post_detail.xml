<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.cinggl.cinggl.home.PostDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        app:titleTextAppearance="@style/toolbarTextSize"
        android:layout_height="84dp"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@android:color/white">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="0.3dp"
                android:id="@+id/header_cover_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cinggl.cinggl.utils.ProportionalImageView
                    android:id="@+id/postImageView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/transparent_background"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

            <RelativeLayout
                android:padding="0.3dp"
                android:id="@+id/postSalePriceRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:text="Buy"
                    android:layout_width="wrap_content"
                    android:id="@+id/buyPostButton"
                    android:textAllCaps="false"
                    android:background="@drawable/colour_btn_background"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:minHeight="40dp"
                    android:minWidth="75dip"
                    android:textSize="21sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp" />


                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentEnd="false"
                    android:id="@+id/postSalePriceTextView"
                    android:layout_centerInParent="true"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_create_white_24dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/editSalePriceImageView"
                    android:tint="@color/colorPrimary"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_done_white_24dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/doneEditingImageView"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

                <ProgressBar
                    android:id="@+id/salePriceProgressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:layout_toLeftOf="@+id/doneEditingImageView"
                    android:layout_toStartOf="@+id/doneEditingImageView"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="21sp"
                    android:visibility="invisible"
                    android:id="@+id/editSalePriceEditText" />


            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/cingleTitleRelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleTextView"
                            android:textColor="@android:color/black"
                            android:textStyle="normal|bold"
                            android:layout_marginTop="5dp"
                            android:textSize="24sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="3dp"
                        android:paddingLeft="3dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:text="Creator:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/postCreatorTextView"
                            android:textSize="21sp"
                            android:textStyle="normal|bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            app:srcCompat="@drawable/profle_image_background"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/profileImageView" />

                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/usernameTextView"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/postCreatorTextView"
                            android:layout_toEndOf="@+id/postCreatorTextView"
                            android:layout_toLeftOf="@+id/profileImageView"
                            android:layout_toStartOf="@+id/profileImageView"
                            android:textSize="21sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp">

                        <TextView
                            android:text="Date Posted:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dateTextView"
                            android:textSize="21sp"
                            android:textStyle="normal|bold"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/datePostedTextView"
                            android:layout_alignBaseline="@+id/dateTextView"
                            android:layout_alignBottom="@+id/dateTextView"
                            android:layout_toRightOf="@+id/dateTextView"
                            android:layout_toEndOf="@+id/dateTextView"
                            android:textSize="21sp"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/tradingRelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp">

                        <TextView
                            android:text="Listed on Ifair:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal|bold"
                            android:textSize="21sp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_alignParentTop="false"
                            android:id="@+id/listedOnIfairTextView"
                            android:layout_centerVertical="true" />


                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tradeMethodTextView"
                            android:textStyle="normal|bold"
                            android:textSize="21sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/listedOnIfairTextView"
                            android:padding="5dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/postSenseCreditRelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp">

                        <TextView
                            android:text="Sense Credits:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/senseCreditsTitleTextView"
                            android:textSize="21sp"
                            android:textStyle="normal|bold"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/senseCreditsTitleTextView"
                            android:layout_toRightOf="@+id/senseCreditsTitleTextView"
                            android:id="@+id/postSenseCreditsTextView"
                            android:textSize="21sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Owner:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ownerTitleTextView"
                            android:textStyle="normal|bold"
                            android:textSize="21sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/ownerTitleTextView"
                            android:layout_toEndOf="@+id/ownerTitleTextView"
                            android:layout_toLeftOf="@+id/ownerImageView"
                            android:layout_toStartOf="@+id/ownerImageView"
                            android:id="@+id/postOwnerTextView"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="21sp"
                            android:layout_centerVertical="true" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            app:srcCompat="@drawable/profle_image_background"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/ownerImageView" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        android:id="@+id/toolsRelativeLayout"
                        android:layout_height="50dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
                            android:id="@+id/commentsImageView"
                            android:tint="@android:color/black"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_toRightOf="@+id/dislikesImageView"
                            android:layout_toEndOf="@+id/dislikesImageView"
                            android:layout_centerVertical="true" />

                        <RelativeLayout
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:id="@+id/likeAndDislikeCardView"
                            android:layout_toRightOf="@+id/likesImageView"
                            android:layout_toEndOf="@+id/likesImageView"
                            android:layout_height="match_parent"
                            android:layout_width="180dp">

                            <RelativeLayout
                                android:layout_toStartOf="@+id/likeAndDislikesDividerView"
                                android:layout_toLeftOf="@+id/likeAndDislikesDividerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/likesPercentageTextView"
                                        android:textColor="@android:color/black"
                                        android:textSize="18sp"
                                        android:layout_centerInParent="false"
                                        android:layout_centerVertical="false"
                                        android:layout_centerHorizontal="false"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginStart="5dp"
                                        android:textAlignment="center" />

                                </android.support.v7.widget.CardView>


                            </RelativeLayout>

                            <View
                                android:id="@+id/likeAndDislikesDividerView"
                                android:layout_width="0.3dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true" />


                            <RelativeLayout
                                android:layout_toEndOf="@+id/likeAndDislikesDividerView"
                                android:layout_toRightOf="@+id/likeAndDislikesDividerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/dislikesPercentageTextView"
                                        android:textColor="@android:color/black"
                                        android:textSize="18sp"
                                        android:layout_centerInParent="false"
                                        android:layout_centerVertical="false"
                                        android:layout_centerHorizontal="false"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginStart="5dp"
                                        android:textAlignment="center" />

                                </android.support.v7.widget.CardView>


                            </RelativeLayout>

                        </RelativeLayout>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                            android:id="@+id/likesImageView"
                            android:padding="5dp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_centerVertical="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_thumb_down_black_24dp"
                            android:id="@+id/dislikesImageView"
                            android:layout_toRightOf="@+id/likeAndDislikeCardView"
                            android:layout_toEndOf="@+id/likeAndDislikeCardView"
                            android:padding="5dp"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/commentsCountTextView"
                            android:textSize="18sp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_toRightOf="@+id/commentsImageView"
                            android:layout_toEndOf="@+id/commentsImageView"
                            android:textStyle="normal|bold"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="true" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="30dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/likesRecyclerView"
                            android:overScrollMode="never"
                            android:nestedScrollingEnabled="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                        </android.support.v7.widget.RecyclerView>


                        <TextView
                            android:id="@+id/totalLikesCountTextView"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:background="@drawable/border_color_primary"
                            android:scaleType="centerCrop"
                            android:cropToPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/likesRecyclerView"
                            android:layout_toEndOf="@+id/likesRecyclerView"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:textSize="18sp"
                            android:text=""
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:id="@+id/descriptionRelativeLayout">

                        <TextView
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/descriptionTextView"
                            android:textColor="@android:color/black"
                            android:textSize="21sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingBottom="10dp" />

                    </RelativeLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
