<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_grey_50"
    tools:context="com.andeqa.andeqa.home.HomeFragment">

    <android.support.v7.widget.RecyclerView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:padding="@dimen/item_off_set"
        android:id="@+id/homeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_margin="15dp"
        android:background="@drawable/border_rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/placeHolderRelativeLayout">

        <ImageView
            app:srcCompat="@drawable/ic_photo"
            android:id="@+id/imagePlaceHolder"
            android:layout_centerInParent="true"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:tint="@color/grey_700"  />

        <TextView
            android:textColor="@color/grey_700"
            android:textSize="21sp"
            android:layout_below="@+id/imagePlaceHolder"
            android:text="Follow some people to see their posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/placeHolderTextView"
            android:textAlignment="center"
            android:padding="20dp" />

    </RelativeLayout>

</LinearLayout>
