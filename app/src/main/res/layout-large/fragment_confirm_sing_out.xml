<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.andeqa.andeqa.profile.ConfirmSingOutFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <TextView
            android:text="Confirm that you want to sign out"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:id="@+id/confirmTextView"
            android:textSize="24sp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="1dp"
            android:background="@drawable/border_rectangle"
            android:layout_toLeftOf="@+id/dividerView"
            android:layout_toStartOf="@+id/dividerView"
            android:id="@+id/YesRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:text="Yes"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@color/grey_700"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textSize="27sp" />


        </RelativeLayout>

        <View
            android:id="@+id/dividerView"
            android:layout_width="0.1dp"
            android:layout_height="0.1dp"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/dividerView"
            android:layout_toEndOf="@+id/dividerView"
            android:background="@drawable/border_rectangle"
            android:id="@+id/noRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:text="No"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="@color/grey_700"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textSize="27sp" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
